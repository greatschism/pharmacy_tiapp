<Alloy>
	<Widget id="contactOptionsMenu" src="ti.optiondialog" onClick="didClickcontactOptionsMenu" />
	<Widget id="timeZonePicker" src="ti.optionpicker" class="optionpicker">
		<View class="content-header-view role-header-view">
			<Label id="timezoneLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="timezoneCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseTimeZone" />
		</View>
	</Widget>
	<Widget id="languagePicker" src="ti.optionpicker" class="optionpicker">
		<View class="content-header-view role-header-view">
			<Label id="languageLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="languageCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseLanguage" />
		</View>
	</Widget>
	<View id="headerView" class="top auto-height vgroup" onPostlayout="didPostlayout" >
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="didChangePatient" />
	</View>
	<TableView id="tableView">
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="notificationLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickmobileNumber">
				<View class="content-view content-group">
					<Label id="mobileNumberLbl" class="content-group-prompt-40" />
					<Label id="mobileNumberValue" class="content-group-right-reply-link-60" />
				</View>
			</TableViewRow>
			<TableViewRow onClick="didClickEmailAddress">
				<View class="content-view content-group">
					<Label id="emailLbl" class="content-group-prompt-40" />
					<Label id="emailValue" class="content-group-right-reply-link-60" />
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="prescriptionDisplayLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="hideExpiredPrescriptionLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="hideExpiredPrescriptionSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeHideExpPrescription"/>
			</TableViewRow>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="hideZeroRefillPrescriptionLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="hideZeroRefillPrescriptionSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeHideZeroRefillPrescription"/>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="locationSettingLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickTimeZone">
				<View class="content-view-with-child content-group">
					<Label id="timeZonePromptLbl" class="content-group-prompt-40" />
					<Label id="timeZoneReplyLbl" class="content-group-right-reply-60" />
				</View>
				<Label class="content-child-icon icon-thin-arrow-down" />
			</TableViewRow>
			<TableViewRow onClick="didClickLanguage">
				<View class="content-view-with-child content-group">
					<Label id="languagePromptLbl" class="content-group-prompt-40" />
					<Label id="languageReplyLbl" class="content-group-right-reply-60" />
				</View>
				<Label class="content-child-icon icon-thin-arrow-down" />
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="loginLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="keepMeSignedInLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="keepMeSignedInSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeAutoLogin" />
			</TableViewRow>
		</TableViewSection>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="contactSupportBtn" class="margin-top secondary-btn" onClick="didClickContactSupport" />
				<Button id="viewAgreementBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickViewAgreement" />
			</View>
		</FooterView>
	</TableView>
</Alloy>