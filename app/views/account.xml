<Alloy>
	<Widget id="timeZonePicker" src="ti.optionpicker" class="optionpicker picker">
		<View class="content-header-view role-header-view">
			<Label id="timezoneLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="timezoneCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseTimeZone" />
		</View>
	</Widget>
	<Widget id="languagePicker" src="ti.optionpicker" class="optionpicker picker">
		<View class="content-header-view role-header-view">
			<Label id="languageLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="languageCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseLanguage" />
		</View>
	</Widget>
	<TableView>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="notificationLbl" class="content-header-lbl" />
					<Button id="editBtn" class="content-header-right-icon icon-edit" onClick="didClickEdit" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickPhone">
				<View class="content-view content-group">
					<Label id="phonePromptLbl" class="content-group-prompt-40" />
					<Label id="phoneReplyLbl" class="content-group-right-reply-link-60" />
				</View>
			</TableViewRow>
			<TableViewRow onClick="didClickEmail">
				<View class="content-view content-group">
					<Label id="emailPromptLbl" class="content-group-prompt-40" />
					<Label id="emailReplyLbl" class="content-group-right-reply-link-60" />
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="prescOptsLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="hideExpiredLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="hideExpiredSwt" src="ti.switch" class="content-right-swt swt" />
			</TableViewRow>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="hideZeroRefillLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="hideZeroRefillSwt" src="ti.switch" class="content-right-swt swt" />
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="locationSettingLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickTimeZone">
				<View class="content-view-with-child content-group">
					<Label id="timeZonePromptLbl" class="content-group-prompt-40" />
					<Label id="timeZoneReplyLbl" class="content-group-right-reply-60" />
				</View>
				<Label class="content-child-icon icon-thin-arrow-down" />
			</TableViewRow>
			<TableViewRow onClick="didClickLanguage">
				<View class="content-view-with-child content-group">
					<Label id="languagePromptLbl" class="content-group-prompt-40" />
					<Label id="languageReplyLbl" class="content-group-right-reply-60" />
				</View>
				<Label class="content-child-icon icon-thin-arrow-down" />
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="content-header-view">
					<Label id="loginLbl" class="content-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="autoLoginLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="autoLoginSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeAutoLogin" />
			</TableViewRow>
		</TableViewSection>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="contactBtn" class="margin-top secondary-btn" onClick="didClickContact" />
				<Button id="agreementBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickAgreement" />
			</View>
		</FooterView>
	</TableView>
</Alloy>