<Alloy>
	<Widget id="contactOptionsMenu" src="ti.optiondialog" onClick="didClickcontactOptionsMenu" />
	<Widget id="timeZonePicker" src="ti.optionpicker" class="optionpicker">
		<View class="margin-top min-height inactive-light-bg-color">
			<Label id="timezoneLbl" class="margin-left right-25 h5 inactive-fg-color" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="timezoneCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseTimeZone" />
		</View>
	</Widget>
	<Widget id="languagePicker" src="ti.optionpicker" class="optionpicker">
		<View class="margin-top min-height inactive-light-bg-color">
			<Label id="languageLbl" class="margin-left right-25 h5 inactive-fg-color" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="languageCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickCloseLanguage" />
		</View>
	</Widget>
	<View id="headerView" class="top auto-height vgroup" onPostlayout="didPostlayout" >
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="didChangePatient" />
	</View>
	<TableView id="tableView">
		<TableViewSection>
			<HeaderView>
				<View class="margin-top min-height inactive-light-bg-color">
					<Label id="notificationLbl" class="margin-left right-25 h5 inactive-fg-color" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickmobileNumber">
				<View class="auto-height">
					<Label id="mobileNumberLbl" class="margin-top margin-bottom margin-left attributed" />
					<Label id="mobileNumberValue" class="margin-right" />
				</View>
			</TableViewRow>
			<TableViewRow onClick="didClickEmailAddress">
				<View class="auto-height">
					<Label id="emailLbl" class="margin-top margin-bottom margin-left attributed" />
					<Label id="emailValue" class="margin-right" />
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="margin-top min-height inactive-light-bg-color">
					<Label id="prescriptionDisplayLbl" class="margin-left right-25 h5 inactive-fg-color" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="auto-height">
					<Label id="hideExpiredPrescriptionLbl" class="margin-top margin-bottom margin-left" />
					<Widget id="hideExpiredPrescriptionSwt" src="ti.switch" class="margin-right swt" onChange="didChangeHideExpPrescription"/>
				</View>
			</TableViewRow>
			<TableViewRow>
				<View class="auto-height">
					<Label id="hideZeroRefillPrescriptionLbl" class="margin-top margin-bottom margin-left" />
					<Widget id="hideZeroRefillPrescriptionSwt" src="ti.switch" class="margin-right swt" onChange="didChangeHideZeroRefillPrescription"/>
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="margin-top min-height inactive-light-bg-color">
					<Label id="locationSettingLbl" class="margin-left right-25 h5 inactive-fg-color" />
				</View>
			</HeaderView>
			<TableViewRow onClick="didClickTimeZone">
				<View class="auto-height">
					<Label id="timeZonePromptLbl" class="margin-top margin-bottom margin-left margin-right-small" />
					<Label id="timeZoneReplyLbl" class="margin-right" />
					<Label class="margin-right-small i6 inactive-fg-color icon-thin-arrow-down touch-disabled" />
				</View>
			</TableViewRow>
			<TableViewRow onClick="didClickLanguage">
				<View class="auto-height">
					<Label id="languagePromptLbl" class="margin-top margin-bottom margin-left margin-right-small" />
					<Label id="languageReplyLbl" class="margin-right" />
					<Label class="margin-right-small i6 inactive-fg-color icon-thin-arrow-down touch-disabled" />
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="margin-top min-height inactive-light-bg-color">
					<Label id="loginLbl" class="margin-left right-25 h5 inactive-fg-color" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="content-view-with-rswt">
					<Label id="keepMeSignedInLbl" class="content-lbl-wrap" />
				</View>
				<Widget id="keepMeSignedInSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeAutoLogin" />
			</TableViewRow>
		</TableViewSection>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="contactSupportBtn" class="margin-top secondary-btn" onClick="didClickContactSupport" />
				<Button id="viewAgreementBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickViewAgreement" />
			</View>
		</FooterView>
	</TableView>
</Alloy>