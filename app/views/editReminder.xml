<Alloy>
	<View class="vgroup">
	<View class="default-height hgroup">
		<Label id="lblDate" class="padding-left width-45 textLayout" />
		<View class="width-50 height-30 right">
			<Picker id="dayPicker" />
		</View>
	</View>	
	
	<View class="hgroup height-40">
		<Label id="lblTime" class="padding-left width-45 textLayout" />
		<View class="width-50 height-30 right">
			<Picker id="timePicker" />
		</View>
	</View>	
	
	<Button id="saveBtn" class="primary-btn padding-bottom" onClick="didClickSave" />
	
	</View>	
</Alloy>