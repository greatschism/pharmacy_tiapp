<Alloy>
	<ScrollView class="disable-bounce">
		<View id="parentView" class="width-100 vgroup">
			<Label id="searchExistingPatientLbl" class="margin-top margin-left margin-right h3 txt-left"/>
			<Label id="askInfoLbl" class="margin-top margin-left margin-right h3 txt-left"/>
			<View id="nameView" class="margin-top-large margin-left margin-right auto-height vgroup border">
				<Widget id="fnameTxt" analyticsId="FnameTxt" src="ti.textfield" class="top left right-disabled txt border-disabled name autocaps-words returnkey-next" onReturn="moveToNext" />
				<View class="h-divider"/>
				<Widget id="dob" analyticsId="DobDropDwn" src="ti.dropdown" class="top left-disabled left dropdown border-disabled dob date" onReturn="moveToNext" />
			</View>
			<Button id="continueBtn" analyticsId="ContinueBtn" class="margin-bottom primary-bg-color primary-light-fg-color primary-border" onClick="didClickContinue"/>
		</View>
	</ScrollView>
</Alloy>