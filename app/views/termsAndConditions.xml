<Alloy>
	<TableView id="tableView" analyticsId="TableView" onClick="didClickItem">
		<FooterView>
			<View class="auto-height vgroup">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<!--footer separator seems to disappear on iOS-->
				<View class="h-divider-light" platform="ios" />
				<Button id="doneBtn" analyticsId="DoneBtn" class="margin-bottom margin-top bg-color primary-fg-color primary-border" onClick="didClickDone" />
			</View>
		</FooterView>
	</TableView>
</Alloy>