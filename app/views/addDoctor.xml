<Alloy>
	<ScrollView class="vgroup">
		<View class="auto-height bg-success">
			<Widget id="hintLbl" src="com.mscripts.styledlabel" class="padding-top padding-bottom margin-left margin-right auto-height h4 text-center multi-line fg-primary" />
		</View>
		<View class="hseparator" />
		<View class="height-default">
			<Widget id="fnameTxt" src="com.mscripts.textfield" class="left form-txt-w50 return-next" onReturn="moveToNext" />
			<Widget id="lnameTxt" src="com.mscripts.textfield" class="right form-txt-w50 return-next" onReturn="moveToNext" />
			<View class="vseparator" />
		</View>
		<View class="hseparator" />
		<Widget id="phoneTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		<View class="hseparator" />
		<Widget id="faxTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		<View class="hseparator" />
		<View class="margin-top hseparator" />
		<Widget id="hospitalTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		<View class="hseparator" />
		<Widget id="streetTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		<View class="hseparator" />
		<View class="height-default">
			<Widget id="cityTxt" src="com.mscripts.textfield" class="left form-txt-w50 return-next" onReturn="moveToNext" />
			<Widget id="stateTxt" src="com.mscripts.textfield" class="right form-txt-w50 return-next" onReturn="moveToNext" />
			<View class="vseparator" />
		</View>
		<View class="hseparator" />
		<Widget id="zipTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		<View class="hseparator" />
		<View class="margin-top hseparator" />
		<Widget id="notesTxta" src="com.mscripts.textarea" class="form-txta" onReturn="moveToNext" />
		<View class="hseparator" />
		<Button id="saveBtn" class="margin-bottom btn-primary" onClick="didClickSave" />
	</ScrollView>
</Alloy>