<Alloy>
	<ScrollView class="vgroup">
		<Widget id="hintLbl" src="com.mscripts.styledlabel" class="h3 auto-height  multi-line" />

		<View class="form-group vgroup padding-bottom">
			<View class="default-height hgroup">
				<Widget id="fnameTxt" src="com.mscripts.textfield" class="left form-txt return-next width-50" onReturn="moveToNext" />
				<View class="vseparator" />
				<Widget id="lnameTxt" src="com.mscripts.textfield" class="right form-txt return-next fill-width" onReturn="moveToNext" />

			</View>
			<View class="hseparator" />
			<Widget id="phoneTxt" src="com.mscripts.textfield" class="form-txt return-next" onChange="numVal" onReturn="moveToNext" />
			<View class="hseparator" />
			<Widget id="faxTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		</View>
		<View class="form-group vgroup padding-bottom">
			<Widget id="hospitalTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<Widget id="streetTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<View class="default-height hgroup">
				<Widget id="cityTxt" src="com.mscripts.textfield" class="left form-txt return-next width-65" onReturn="moveToNext" />
				<View class="vseparator" />
				<Widget id="stateTxt" src="com.mscripts.dropdown" class="form-dropdown" onReturn="moveToNext" />
			</View>
			<View class="hseparator" />
			<Widget id="zipTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		</View>
		<View class="form-group padding-bottom">
			<Widget id="notesTxta" src="com.mscripts.textarea" class="form-txta" onReturn="moveToNext" />
		</View>
		<Button id="saveBtn" class="margin-bottom primary-btn" onClick="didClickSave" />
	</ScrollView>
</Alloy>