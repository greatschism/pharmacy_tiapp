<Alloy>
	<View id="headerView" class="top auto-height vgroup">
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="didChangePatient" if="Alloy.Globals.isLoggedIn"/>
		<View class="content-header-view-wrap">
			<Label id="titleLbl" class="content-header-lbl-wrap"/>
		</View>
		<Button id="photoBtn" class="margin-top secondary-btn" onClick="didClickPhoto"/>
		<Require src="templates/optionDivider" />
		<Button id="typeBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickType"/>
	</View>
</Alloy>
