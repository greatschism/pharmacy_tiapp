<Alloy>
	<View id="headerView" class="top auto-height vgroup">
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="didChangePatient" if="Alloy.Globals.isLoggedIn"/>
		<View class="auto-height inactive-light-bg-color role-header-view margin-bottom">
			<Label id="titleLbl" class="margin-left margin-top margin-bottom h3 inactive-fg-color"/>
		</View>
		<Button id="photoBtn" analyticsId="PhotoBtn" class="top-disabled bg-color margin-top primary-fg-color primary-border" onClick="didClickPhoto"/>
		<Require src="templates/optionDivider" />
		<Button id="typeBtn" analyticsId="TypeBtn" class="bg-color primary-fg-color primary-border" onClick="didClickType"/>
	</View>
</Alloy>
