<Alloy>
	<ScrollView id="scrollView" class="vgroup bg-primary">
		<Label id="titleIcon" class="margin-top large-icn fg-primary" />
		<Label id="hintLbl" class="styled-h2 multi-line fg-primary" />
		<View class="form-group vgroup">
			<View class="default-height">
				<Widget id="fnameTxt" src="com.mscripts.textfield" class="left form-txt-w50 return-next" onReturn="moveToNext" />
				<Widget id="lnameTxt" src="com.mscripts.textfield" class="right form-txt-w50 return-next" onReturn="moveToNext" />
				<View class="vseparator" />
			</View>
			<View class="hseparator" />
			<Widget id="dob" src="com.mscripts.dropdown" class="form-dropdown" onReturn="moveToNext" />
		</View>
		<View class="auto-height">
			<Widget id="passwordTooltip" src="com.mscripts.tooltip" class="h5" />
			<View id="inputView" class="form-group vgroup">
				<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
				<View class="hseparator" />
				<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
				<View class="hseparator" />
				<View class="default-height">
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="left form-txt return-next" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="moveToNext" />
					<Widget id="toggleSwt" src="com.mscripts.switch" class="padding-right swt" onChange="didToggle" onTouch="handleScroll" />
				</View>
			</View>
		</View>
		<View class="form-group vgroup">
			<Widget id="rxNoTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<View class="default-height" onClick="choosePharmacy">
				<Label id="locationLbl" class="padding-left h3 lbl-fg-hint-text touch-disabled" />
				<Label id="downLbl" class="padding-right tiny-icn touch-disabled" />
			</View>
		</View>
		<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="styled-h2 fg-primary" />
		<Button id="signupBtn" class="margin-bottom btn-secondary" onClick="didClickSignup" />
	</ScrollView>
</Alloy>