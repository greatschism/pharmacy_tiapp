<Alloy>
	<ScrollView class="vgroup bg-orange">
		<ImageView id="logoImg" />
		<Label id="hintLbl" class="top-20 width-90 auto-height multi-line font-light h3 white text-center" />
		<View class="top-20 width-90 auto-height vgroup bg-white rounded-corner-4 border-gray">
			<View class="height-50d">
				<Widget id="fnameTxt" src="com.mscripts.textfield" class="left width-50 black txt h3 font-regular" />
				<Widget id="lnameTxt" src="com.mscripts.textfield" class="right width-50 black txt h3 font-regular" />
				<View class="vseparator" />
			</View>
			<View class="hseparator" />
			<Label id="dobLbl" class="fill-width height-50d h3 font-regular cloudy" />
		</View>
		<View class="top-20 width-90 auto-height vgroup bg-white rounded-corner-4 border-gray">
			<Widget id="emailTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
			<View class="hseparator" />
			<Widget id="unameTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
			<View class="hseparator" />
			<View class="height-50d">
				<Widget id="passwordTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
				<Widget id="toggleSwt" src="com.mscripts.switch" onChange="didToggle" />
			</View>
		</View>
		<View class="top-20 width-90 auto-height vgroup bg-white rounded-corner-4 border-gray">
			<Widget id="rxNoTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
			<View class="hseparator" />
			<View class="height-50d">
				<Label id="locationLbl" class="fill-width height-50d h3 font-regular cloudy" />
				<ImageView id="downImg" />
			</View>
		</View>
		<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="top-20 width-90 height-50d h4 font-light bg-orange white text-center" />
		<View id="signupView" class="top-20 button-view width-90 bg-white">
			<View class="auto-width auto-height hgroup touch-disabled">
				<Label id="singupLbl" class="button-title h2 orange" />
				<ImageView id="singupImg" class="button-img" />
			</View>
		</View>
		<View class="vspacer" />
	</ScrollView>
</Alloy>