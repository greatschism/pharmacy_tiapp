		<View id="emailView" class="auto-height padding-bottom form-group" zIndex="1">
				<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
		</View>	

		
		<View id="inputView" class="form-group vgroup padding-bottom ">
				<Widget id="unameTxt" src="com.mscripts.textfield" class="left form-txt return-next" onFocus="didFocusUsername" onBlur="didBlurUsername" onReturn="moveToNext"/>
				<View class="hseparator" />
				<Widget id="passwordTxt" src="com.mscripts.textfield" class="left form-txt return-next" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="moveToNext" />
		</View>
		
		<View class="auto-height padding-bottom">
			<Label id="showPassword" class="padding-left "/>
			<Widget id="toggleSwt" src="com.mscripts.switch" class="padding-right swt" onChange="didToggle" onTouch="handleScroll" />
		</View>
			
		<View class="form-group vgroup padding-bottom">
			<Widget id="rxNoTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<View class="default-height " onClick="choosePharmacy">
				<Label id="locationLbl" class="padding-left h3 lbl-fg-hint-text touch-disabled" />
				<Label id="downLbl" class=" list-icons-child touch-disabled" />
			</View>
		</View>
		
		<View class="auto-height padding-bottom">
		<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="padding-left padding-right" onClick="didClickTermsAndCondition"/>
		</View>
		
		<Button id="signupBtn" class="margin-bottom primary-btn" onClick="didClickSignup" />
	</ScrollView>
</Alloy>

