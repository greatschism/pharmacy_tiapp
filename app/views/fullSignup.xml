<Alloy>
	<ScrollView id="scrollView" class="vgroup">
		<View class="auto-height">
			<View class="auto-height vgroup">
				<ImageView id="logoImg" class="img-padding-top logo-img" />
				<View class="img-padding-top form-group vgroup">
					<View class="default-height">
						<Widget id="fnameTxt" src="com.mscripts.textfield" class="left width-50 form-txt returnkey-next" onReturn="moveToNext" />
						<View class="vseparator" />
						<Widget id="lnameTxt" src="com.mscripts.textfield" class="right width-50 form-txt returnkey-next" onReturn="moveToNext" />
					</View>
					<View class="hseparator" />
					<Widget id="dob" src="com.mscripts.dropdown" class="form-dropdown " onReturn="moveToNext" />
						
				</View>
				<Widget id="emailTxt" src="com.mscripts.textfield" class="padding-top txt returnkey-next" onReturn="moveToNext" />
				<View id="userContainerView" class="padding-top form-group vgroup">
					<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onFocus="didFocusUsername" onBlur="didBlurTxt" onReturn="moveToNext" />
					<View class="hseparator" />
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onFocus="didFocusPassword" onBlur="didBlurTxt" onReturn="moveToNext" />
				</View>
				<View class="padding-top margin-left margin-right auto-height">
					<Label id="showPasswordLbl" class="left text-left lbl" />
					<Widget id="toggleSwt" src="com.mscripts.switch" class="right swt" onTouch="handleScroll" onChange="didToggle"  />
				</View>
				<View id="rxContainerView" class="padding-top padding-bottom form-group vgroup">
					<Widget id="rxNoTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onChange="didChangeRxNo" onFocus="didFocusRxNo" onBlur="didBlurTxt" onReturn="moveToNext"/>
					<View class="hseparator" />
					<View id="pharmacyView" class="default-height" onClick="didClickPharmacy">
						<Label id="pharmacyLbl" class="padding-left text-left lbl touch-disabled" />
						<Label class="list-item-child touch-disabled" />
					</View>
				</View>
				<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="margin-left margin-right link-multi-line" onClick="didClickAgreement" />
				<Button id="createBtn" class="btn-padding-top margin-bottom primary-btn" onClick="didClickCreateAccount" />
			</View>
			<Widget id="usernameTooltip" src="com.mscripts.tooltip" class="padding-tooltip arrow-down tooltip" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
			<Widget id="passwordTooltip" src="com.mscripts.tooltip" class="padding-tooltip arrow-down tooltip" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
			<Widget id="rxNoTooltip" src="com.mscripts.tooltip" class="padding-tooltip arrow-down tooltip" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
		</View>
	</ScrollView>
</Alloy>
