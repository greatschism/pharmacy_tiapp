<Alloy>
	<ScrollView>
		<View class="vgroup">
			<View class="vgroup auto-height">
				<Label id="childTitle" class="subtitle-centered-wrap margin-top margin-bottom"/>
				<ImageView id="childImg"/>
			</View>
			<View class="margin-top form-vgroup">
				<View id="txtView" class="auto-height">
					<Widget id="fnameTxt" src="ti.textfield" class="left form-txt-50 autocaps-words returnkey-next" onReturn="moveToNext" />
					<Widget id="lnameTxt" src="ti.textfield" class="right form-txt-50 autocaps-words returnkey-next" onReturn="moveToNext" />
					<View id="vDividerView" class="v-divider"/>
				</View>
				<View class="h-divider"/>
				<Widget id="dobDp" src="ti.dropdown" class="form-dropdown date dob" onReturn="moveToNext" />
			</View>
			<View id="rxContainer" class="margin-top form-vgroup">
				<Widget id="rxNoTxt" src="ti.textfield" class="rx form-txt keyboard-number returnkey-next txt-right-btn" onFocus="didFocusRx" onBlur="didBlurFocusRx" onChange="didChangeRx" onPostlayout="didPostlayoutRxContainerView" onClick="didClickHelp"/>
				<View class="h-divider"/>
				<View id="storeView" class="content-view" onClick="didClickPharmacy">
					<View class="content-master-view-70">
						<Label id="storeTitleLbl" class="content-lbl" />
					</View>
					<View class="content-detail-view-30">
						<Label id="arrowLbl" class="content-child-icon icon-thick-arrow-right" />
					</View>
				</View>
			</View>
			<Widget id="agreementAttr" src="ti.styledlabel" class="attributed-wrap margin-top margin-bottom" onClick="didClickAgreement" />
			<Button id="continueBtn" class="margin-top primary-btn" onClick="didClickContinue"/>
			<Button id="skipBtn" class="margin-top secondary-btn" onClick="didClickSkip"  if="!$.args.isFamilyMemberFlow"/>
		</View>
		<Widget id="rxTooltip" src="ti.tooltip" class="hide tooltip-attributed-lbl-wrap secondary-tooltip" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
	</ScrollView>
</Alloy>
