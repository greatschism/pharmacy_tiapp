<Alloy>
	<View id="toggleView" class="nav-bar-right-view" onSingletap="didToggle">
		<ImageView id="toggleImg" class="touch-disabled" />
	</View>
	<View>
		<ListView id="listView" defaultItemTemplate="appointment" platform="ios,android">
			<Templates>
				<ItemTemplate name="appointment" class="row-h50">
					<View class="auto-height hgroup">
						<ImageView bindId="icon" class="left-icon left-15" />
						<Label bindId="title" class="h2 alto left-5" />
					</View>
				</ItemTemplate>
			</Templates>
			<ListSection>
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="appointmentLbl" text="Upcoming appointments" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="appointment" image="/images/icon_user_orange_large.png" title:text="You have an appointment with Dr. Joe" />
				<ListItem title:text="You have an upcoming appointment" itemClick="OpenCamera"/>
			</ListSection>
			<ListSection>
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="mydoctorsLbl" text="My Doctors" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem title:text="My Doctors" />
				<ListItem title:text="My Doctors" />
			</ListSection>

		</ListView>
		<Button id="addDoctorBtn" class="width-90 bg-orange white h2 font-regular" />
	</View>
</Alloy> 