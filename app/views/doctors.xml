<Alloy>
	<View id="toggleView" class="nav-bar-right-view" onSingletap="didToggle">
		<ImageView id="toggleImg" />
	</View>
	<View id="listContainer" class="vgroup bg-white show">

		<ListView platform="ios,android">
			<Templates>
				<ItemTemplate name="options" class="row-h50">
					<View class="auto-height hgroup">
						<ImageView bindId="icon" class="left-icon left-15" />
						<Label bindId="name" class="h2 cloudy left-5" />
						<Label bindId="detail" class="h2 alto left-5" />
					</View>
				</ItemTemplate>
				<ItemTemplate name="hours" class="row-h30">
					<Label bindId="day" class="h4 cloudy left-15" />
					<Label bindId="storehours" class="h4 cloudy right-15" />
				</ItemTemplate>
				<ItemTemplate name="services" class="row-h30">
					<Label bindId="service" class="h4 cloudy left-15" />
				</ItemTemplate>
			</Templates>
			<ListSection dataCollection="storeOptions">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label text="Upcoming appointments" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="options" icon:image="{icon}" name:text="{name}" detail:text="{detail}" />
			</ListSection>

		</ListView>
		<ListView id="listView" platform="ios,android" defaultItemTemplate="favourites" onItemclick="didItemClick">
			<Templates>
				<ItemTemplate name="favourites" class="row">
					<View class="container-view">
						<ImageView class="favourite" />
						<View class="content-view">
							<View class="left width-60 auto-height vgroup">
								<Label bindId="title" class="title width-95 gray" />
								<Label bindId="subtitle" class="subtitle font-light width-95 h5 gray" />
							</View>
							<View class="distance-view right width-35 auto-height">
								<ImageView class="distance-img left" />
								<Label bindId="distance" class="distance font-light gray" />
							</View>
						</View>
					</View>
					<ImageView class="child" />
				</ItemTemplate>
				<ItemTemplate name="nearby" class="row">
					<View class="container-view">
						<View class="content-view">
							<View class="left width-60 auto-height vgroup">
								<Label bindId="title" class="title width-95 gray" />
								<Label bindId="subtitle" class="subtitle font-light width-95 h5 gray" />
							</View>
							<View class="distance-view right width-35 auto-height">
								<ImageView class="distance-img left" />
								<Label bindId="distance" class="distance font-light gray" />
							</View>
						</View>
					</View>
					<ImageView class="child" />
				</ItemTemplate>
			</Templates>
			<ListSection dataCollection="stores">
				<ListItem template="{template}" itemId="{storeid}" title:text="{addressline1}" subtitle:text="{subtitle}"  />
			</ListSection>
		</ListView>
		<ListView id="listView" platform="ios,android" defaultItemTemplate="favourites" onItemclick="didItemClick">
			<Templates>
				<ItemTemplate name="favourites" class="row">
					<View class="container-view">
						<ImageView class="favourite" />
						<View class="content-view">
							<View class="left width-60 auto-height vgroup">
								<Label bindId="title" class="title width-95 gray" />
								<Label bindId="subtitle" class="subtitle font-light width-95 h5 gray" />
							</View>
							<View class="distance-view right width-35 auto-height">
								<ImageView class="distance-img left" />
								<Label bindId="distance" class="distance font-light gray" />
							</View>
						</View>
					</View>
					<ImageView class="child" />
				</ItemTemplate>
				<ItemTemplate name="nearby" class="row">
					<View class="container-view">
						<View class="content-view">
							<View class="left width-60 auto-height vgroup">
								<Label bindId="title" class="title width-95 gray" />
								<Label bindId="subtitle" class="subtitle font-light width-95 h5 gray" />
							</View>
							<View class="distance-view right width-35 auto-height">
								<ImageView class="distance-img left" />
								<Label bindId="distance" class="distance font-light gray" />
							</View>
						</View>
					</View>
					<ImageView class="child" />
				</ItemTemplate>
			</Templates>
			<ListSection dataCollection="stores">
				<ListItem template="{template}" itemId="{storeid}" title:text="{addressline1}" subtitle:text="{subtitle}" distance:text="{distance}" />
			</ListSection>
		</ListView>
		<TableView id="listView" platform="mobileweb" dataCollection="stores" onClick="didItemClick">
			<TableViewRow class="row" itemId="{storeid}">
				<View class="container-view">
					<ImageView class="favourite" visible="{favourite}" />
					<View class="content-view">
						<View class="left width-60 auto-height vgroup">
							<Label text="{addressline1}" class="title width-95 gray" />
							<Label text="{subtitle}" class="subtitle font-light width-95 h5 gray" />
						</View>
						<View class="distance-view right width-35 auto-height">
							<ImageView class="distance-img left" />
							<Label text="{distance}" class="distance font-light gray" />
						</View>
					</View>
				</View>
				<ImageView class="child" />
			</TableViewRow>
		</TableView>
		<View class="top-20 button-view width-90 bg-orange" >
		
			<Label text="Add another doctor" class="button-title-left h3 white" />
		</View>

	</View>

</Alloy> 