<Alloy>
	<Widget id="toggleMenu" src="com.mscripts.togglemenu" class="font-regular h2" onClick="didClickMenu" />

	<View class="nav-bar-right-view" onSingletap="didToggle">
		<ImageView id="toggleImg" class="touch-disabled" />
	</View>
	<View>
		<ListView id="listView" platform="ios,android" onItemclick="didItemClick">
			<Templates>
				<ItemTemplate name="gettingRefilled" class="auto-height top-10">
					<View class="right-25 auto-height bottom-10">
					
						<Label bindId="title" class="title auto-height font-16 font-regular gray multi-line" />
					</View>
						<ImageView class="profile-img left-10" />
				</ItemTemplate>
				<ItemTemplate name="readytoRefill" class="auto-height top-10">
					<View class="right-25 auto-height bottom-10">
					
						<View class="content-view auto-height vgroup">
							<Label bindId="prescription" class="left auto-height font-16 font-regular black multi-line touch-disabled" />
							<Label bindId="rxnumber" class="left auto-height h5 font-regular gray multi-line touch-disabled" />
							<Label bindId="duedate" class="right auto-height h5 font-regular gray multi-line touch-disabled"/>
						
						</View>
					</View>
					
				</ItemTemplate>
			</Templates>
			<ListSection id="gettingRefilledSection" dataCollection="gettingRefilled" dataTransform="transformGettingRefilled">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="gettingRefilledLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="gettingRefilled" title:attributedString="{title}" platform="ios" />
				<ListItem template="gettingRefilled" title:html="{title}" platform="android" />
				
			</ListSection>
			<ListSection id="readytoRefillSection" dataCollection="readytoRefill" dataTransform="transformReadyToRefill">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="readyRefillLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="readytoRefill" itemId="{id}" prescription:text="{name}" rxnumber:text="{description}" duedate:text="{description}" />
			</ListSection>
		</ListView>
		<ScrollView id="listView" class="vgroup" platform="mobileweb">
			<TableView  id="gettingRefilledSection" class="auto-height" dataCollection="gettingRefilled" dataTransform="transformGettingRefilled" onClick="didItemClick">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="appointmentLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<TableViewRow class="auto-height top-10" rowTable="gettingRefilledSection">
					<View class="top auto-height bottom-10">
						<View class="top right-25 auto-height">
							<View class="top auto-height">
								<ImageView image="{image}" class="profile-img left-10" />
							</View>
							<Label text="{title}" class="title right-25 auto-height top-5 bottom-5 font-16 font-regular gray multi-line" />
						</View>
						<ImageView class="child" />
					</View>
				</TableViewRow>
				<FooterView>
					<View class="row-h40 bg-aeroblue">
						<View>
							<View class="auto hgroup touch-disabled">
								<ImageView id="addImg" class="width-20d left touch-disabled" />
							
							</View>
						</View>
					</View>
				</FooterView>
			</TableView>
			<TableView id="readytoRefillSection" class="auto-height" dataCollection="readytoRefill" dataTransform="transformReadyToRefill" onClick="didItemClick">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="doctorLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<TableViewRow class="auto-height top-10" rowTable="readytoRefillSection" rowId="{id}">
					<View class="top auto-height bottom-10">
						<View class="top right-25 auto-height">
							
							<View class="content-view auto-height vgroup">
								<Label text="{name}" bindId="prescription" class="right-25 left auto-height font-16 font-regular black multi-line touch-disabled" />
								<Label text="{description}" class="right-25 left auto-height h5 font-regular gray multi-line touch-disabled" />
							</View>
						</View>
						
					</View>
				</TableViewRow>
			</TableView>
		</ScrollView>
		
	</View>
</Alloy> 