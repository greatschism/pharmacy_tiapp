<Alloy>
	<Widget id="rightNavBtn" src="ti.navbutton" class="nav-icon icon-options-menu" onClick="didClickRightNavBtn" />
	<Widget id="optionsMenu" src="ti.optiondialog" onClick="didClickOptionMenu" />
	<Widget id="sortPicker" src="ti.optionpicker" class="optionpicker" onClick="didClickSortPicker" if="!$.args.showHiddenPrescriptions">
		<View class="content-header-view role-header-view">
			<Label id="sortLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="sortCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickSortClose" />
		</View>
	</Widget>
	<Widget id="unhidePicker" src="ti.optionpicker" class="optionpicker" if="!$.args.showHiddenPrescriptions">
		<View id="unhideHeaderView" class="auto-height role-header-view">
			<Button id="selectNoneBtn" class="left tertiary-btn-50" onClick="toggleUnhideSelection" />
			<Button id="selectAllBtn" class="right tertiary-btn-50" onClick="toggleUnhideSelection" />
			<View id="vDividerView" class="v-divider-light" />
			<View class="top h-divider-light" />
			<View class="bottom h-divider-light" />
		</View>
		<View class="auto-height vgroup role-footer-view">
			<Button id="unhideBtn" class="margin-top primary-btn" onClick="didClickUnhide"  />
			<Button id="unhideCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickUnhideClose" />
		</View>
	</Widget>
	<View id="searchbar" class="top search-bar hide fade-out">
		<Widget id="searchTxt" src="ti.textfield" class="top returnkey-done search-txt" onChange="didChangeSearch" onClear="didChangeSearch"  />
	</View>
	<View id="headerView" class="top auto-height vgroup" onPostlayout="didPostlayout" >
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="prepareData" />
		<Label id="headerLbl" class="margin-top margin-bottom content-header-lbl-wrap" if="$.args.isMedReminder" />
		<View class="h-divider-light" if="$.args.sectionHeaderViewDisabled" />
	</View>
	<TableView id="tableView" class="top margin-bottom" onSingletap="didClickTableView">
		<FooterView platform="ios">
			<View class="auto-height" />
		</FooterView>
	</TableView>
	<ScrollView id="partialView" class="hide top margin-bottom vgroup">
		<Label id="partialDescLbl" class="margin-top lbl-centered-wrap" />
		<Label id="partialTitleLbl" class="margin-top title-centered-wrap" />
		<Button class="margin-top margin-bottom primary-icon-extra-large icon-add-prescription" onClick="didClickAddPresc" />
	</ScrollView>
	<Button id="submitBtn" class="margin-bottom primary-btn" onClick="didClickSubmit" if="$.args.selectable" />
	<!--tooltip shown only for first time from med reminder - showMedReminderTooltip flag should be sent with arguments-->
	<Widget id="tooltip" src="ti.tooltip" class="margin-left tooltip-unfilled-arrow-up content-primary-tooltip" if="$.args.showMedReminderTooltip">
		<View class="auto-height vgroup">
			<Label id="tooltipLbl" class="lbl-wrap" />
			<Button id="tooltipHideBtn" class="margin-top margin-bottom tooltip-primary-btn" onClick="didClickHide" />
		</View>
	</Widget>
</Alloy> 