<Alloy>
	<Widget id="rightNavBtn" src="ti.navbutton" class="nav-icon icon-options-menu" onClick="didClickRightNavBtn" />
	<Widget id="optionsMenu" src="ti.optiondialog" onClick="didClickOptionMenu" />
	<Widget id="sortPicker" src="ti.optionpicker" class="optionpicker" onClick="didClickSortPicker">
		<View class="content-header-view role-header-view">
			<Label id="sortLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="sortCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickSortClose" />
		</View>
	</Widget>
	<Widget id="unhidePicker" src="ti.optionpicker" class="optionpicker">
		<View id="unhideHeaderView" class="auto-height role-header-view">
			<Button id="selectNoneBtn" class="left tertiary-btn-50" onClick="toggleUnhideSelection" />
			<Button id="selectAllBtn" class="right tertiary-btn-50" onClick="toggleUnhideSelection" />
			<View id="vDividerView" class="v-divider-light" />
			<View class="top h-divider-light" />
			<View class="bottom h-divider-light" />
		</View>
		<View class="auto-height vgroup role-footer-view">
			<Button id="unhideBtn" class="margin-top primary-btn"onClick="didClickUnhide"  />
			<Button id="unhideCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickUnhideClose" />
		</View>
	</Widget>
	<View id="searchbar" class="top search-bar hide fade-out">
		<Widget id="searchTxt" src="ti.textfield" class="top returnkey-done search-txt" onChange="didChangeSearch" onClear="didChangeSearch"  />
	</View>
	<View id="headerView" class="top content-header-view-wrap" onPostlayout="didPostlayout" if="$.args.isMedReminder">
		<Label id="headerLbl" class="content-header-lbl-wrap" />
	</View>
	<TableView id="tableView" class="top margin-bottom" onSingletap="didClickTableView">
		<FooterView platform="ios">
			<View class="auto-height" />
		</FooterView>
	</TableView>
	<Button id="submitBtn" class="margin-bottom primary-btn" if="$.args.selectable" onClick="didClickSubmit" />
	<Widget id="loader" name="embedded" src="ti.loading" class="loader-embedded-fill" if="$.args.isMedReminder" />
</Alloy> 