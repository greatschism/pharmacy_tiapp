<Alloy>
	<Widget id="toggleMenu" src="com.mscripts.togglemenu" class="font-regular h2" onClick="didClickMenu" />

	<View class="nav-bar-right-view" onSingletap="didToggle">
		<ImageView id="toggleImg" class="touch-disabled" />
	</View>
	<View>
		<ListView id="listView" platform="ios,android" onItemclick="didItemClick">
			<Templates>
				<ItemTemplate name="appointment" class="auto-height top-10">
					<View class="right-25 auto-height bottom-10">
					
						<Label bindId="title" class="title auto-height font-16 font-regular gray multi-line" />
					</View>
					<ImageView class="child" />
				</ItemTemplate>
				<ItemTemplate name="doctor" class="auto-height top-10">
					<View class="right-25 auto-height bottom-10">
						<ImageView bindId="profile" class="profile-img left-10" />
						<View class="content-view auto-height vgroup">
							<Label bindId="doctor" class="left auto-height font-16 font-regular black multi-line touch-disabled" />
							<Label bindId="prescription" class="left auto-height h5 font-regular gray multi-line touch-disabled" />
						</View>
					</View>
					<ImageView class="child" />
				</ItemTemplate>
			</Templates>
			<ListSection id="appointmentSection" dataCollection="upcomingAppointments" dataTransform="transformAppointment">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="appointmentLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="appointment" profile:image="{image}" title:attributedString="{title}" platform="ios" />
				<ListItem template="appointment" profile:image="{image}" title:html="{title}" platform="android" />
				<FooterView>
					<View class="row-h40 bg-aeroblue" onClick="didClickSetAppointment">
						<View class="auto hgroup touch-disabled">
							<ImageView id="addImg" class="width-20d left touch-disabled" />
							<Label id="addLbl" class="button-title h4 gulfstream touch-disabled" />
						</View>
					</View>
				</FooterView>
			</ListSection>
			<ListSection id="doctorSection" dataCollection="doctors" dataTransform="transformDoctor">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="doctorLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="doctor" itemId="{id}" profile:image="{image}" doctor:text="{name}" prescription:text="{description}" />
			</ListSection>
		</ListView>
		<ScrollView id="listView" class="vgroup" platform="mobileweb">
			<TableView  id="appointmentSection" class="auto-height" dataCollection="upcomingAppointments" dataTransform="transformAppointment" onClick="didItemClick">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="appointmentLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<TableViewRow class="auto-height top-10" rowTable="appointmentSection">
					<View class="top auto-height bottom-10">
						<View class="top right-25 auto-height">
							<View class="top auto-height">
								<ImageView image="{image}" class="profile-img left-10" />
							</View>
							<Label text="{title}" class="title right-25 auto-height top-5 bottom-5 font-16 font-regular gray multi-line" />
						</View>
						<ImageView class="child" />
					</View>
				</TableViewRow>
				<FooterView>
					<View class="row-h40 bg-aeroblue">
						<View onClick="didClickSetAppointment">
							<View class="auto hgroup touch-disabled">
								<ImageView id="addImg" class="width-20d left touch-disabled" />
								<Label id="addLbl" class="button-title h4 gulfstream touch-disabled" />
							</View>
						</View>
					</View>
				</FooterView>
			</TableView>
			<TableView id="doctorSection" class="auto-height" dataCollection="doctors" dataTransform="transformDoctor" onClick="didItemClick">
				<HeaderView>
					<View class="row-h20 bg-armadillo">
						<Label id="doctorLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<TableViewRow class="auto-height top-10" rowTable="doctorSection" rowId="{id}">
					<View class="top auto-height bottom-10">
						<View class="top right-25 auto-height">
							<View class="top auto-height">
								<ImageView image="{image}" bindId="profile" class="profile-img left-10" />
							</View>
							<View class="content-view auto-height vgroup">
								<Label text="{name}" bindId="doctor" class="right-25 left auto-height font-16 font-regular black multi-line touch-disabled" />
								<Label text="{description}" bindId="prescription" class="right-25 left auto-height h5 font-regular gray multi-line touch-disabled" />
							</View>
						</View>
						<ImageView class="child" />
					</View>
				</TableViewRow>
			</TableView>
		</ScrollView>
		
	</View>
</Alloy> 