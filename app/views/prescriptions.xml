<Alloy>
	<Widget id="optionsMenu" src="com.mscripts.togglemenu" class="togglemenu" onClick="didClickOptionMenu" />
	<Widget id="sortPicker" src="com.mscripts.togglemenu" class="optionpicker" onClick="didClickSortPicker" />
	<Widget id="unhidePicker" src="com.mscripts.optionpicker" class="optionpicker">
		<View class="default-height" role="headerView">
			<Button id="selectNoneBtn" class="left width-50 thirtiary-btn-small" onClick="didClickSelectNone" />
			<Button  class="right width-50 thirtiary-btn-small" onClick="didClickSelectAll" />
			<View class="vseparator" />
		</View>
		<View class="auto-height vgroup" role="footerView">
			<View class="hseparator" />
			<Button id="unhideBtn" class="btn-padding-top primary-btn" onClick="didClickUnhideBtn"/>
			<Button id="closeBtn" class="btn-padding-top margin-bottom secondary-btn" onClick="didClickCloseBtn" />
		</View>
	</Widget>
	<View id="optionsView" class="right nav-action-container" onClick="didClickOptionView">
		<Label id="optionsLbl" class="margin-right nav-icon touch-disabled" />
	</View>
	<View id="searchView" class="top search-view">
		<Widget id="searchbar" src="com.mscripts.textfield"  class="top search-txt" onChange="didChangeSearch" />
	</View>
	<TableView id="tableView" class="top" onClick="didItemClick">
		<FooterView>
			<View class="footer-view-break" />
		</FooterView>
	</TableView>
</Alloy> 