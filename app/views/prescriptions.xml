<Alloy>
	<Widget id="optionsMenu" src="com.mscripts.optiondialog" onClick="didClickOptionItem" />
	<Widget id="sortMenu" src="com.mscripts.optiondialog" />
	<Widget id="unhideMenu" src="com.mscripts.optionpicker" class="optionpicker">
		<View class="default-height" role="headerView">
			<Button id="selectNoneBtn" class="left width-50 thirtiary-btn-small" onClick="didClickSelectNone" />
			<Button id="selectAllBtn" class="right width-50 thirtiary-btn-small" onClick="didClickSelectAll" />
			<View class="vseparator" />
		</View>
		<View class="auto-height vgroup" role="footerView">
			<View class="hseparator" />
			<Button id="unhideBtn" class="btn-padding-top primary-btn" onClick="didClickUnhideBtn"/>
			<Button id="closeBtn" class="btn-padding-top margin-bottom secondary-btn" onClick="didClickCloseBtn" />
		</View>
	</Widget>
	<Button id="rightNavBtn" class="role-right-nav-btn nav-icon-btn" onClick="didClickOptionMenu"/>
	<View id="searchView" class="top search-view fade-out">
		<Widget id="searchbar" src="com.mscripts.textfield"  class="top returnkey-done search-txt" onChange="didChangeSearch" onClear="didChangeSearch" />
	</View>
	<TableView id="tableView" class="top secondary-bg-color" onClick="didItemClick">
		<FooterView>
			<View class="footer-view-break" />
		</FooterView>
	</TableView>
</Alloy> 