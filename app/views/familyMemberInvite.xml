<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="adultImg" class="margin-top" />
		<Label id="inviteLbl" class="subtitle-centered-wrap margin-top margin-bottom"/>
		<Label id="sendTextLbl" class="lbl margin-top margin-bottom"/>
		<View class="margin-top form-group">
			<Widget id="phoneTxt" src="ti.textfield" class="form-txt keyboard-number returnkey-done"  onChange="didChangePhone"/>
		</View>
		<Require src="templates/optionDivider" class="margin-top margin-bottom"/>
		<Label id="sendEmailLbl" class="lbl margin-top margin-bottom"/>
		<View class="margin-top form-group">
			<Widget id="emailTxt" src="ti.textfield" class="form-txt keyboard-email returnkey-done"/>
		</View>
		<Button id="sendBtn" class="primary-btn margin-top margin-bottom" onClick="didSendInvite"/>
		<Button id="cancelBtn" class="secondary-btn margin-bottom" onClick="didClickCancel"/>
	</ScrollView>
</Alloy>