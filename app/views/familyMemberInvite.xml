<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="adultImg" class="margin-top-large"/>
		<Label id="inviteLbl" class="margin-top-large h4 margin-left margin-right txt-center"/>
		<Label id="sendTextLbl" class="margin-top-large h4 margin-left margin-right"/>
		<View class="margin-top-large margin-left margin-right auto-height vgroup border">
			<Widget id="phoneTxt" analyticsId="PhoneTxt" src="ti.textfield" class="top left right txt border-disabled keyboard-phone returnkey-done"  onChange="didChangePhone"/>
		</View>
		<Require src="templates/optionDivider"/>
		<Label id="sendEmailLbl" class="margin-top-large h4 margin-left margin-right"/>
		<View class="margin-top-large margin-left margin-right auto-height vgroup border">
			<Widget id="emailTxt" analyticsId="EmailTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-done keyboard-email"/>
		</View>
		<Button id="sendBtn" analyticsId="SendBtn" class="margin-bottom primary-bg-color dark-color primary-border" onClick="didSendInvite"/>
		<Button id="cancelBtn" analyticsId="CancelBtn" class="bg-color primary-fg-color primary-border margin-bottom" onClick="didClickCancel"/>
	</ScrollView>
</Alloy>