<Alloy>
	<View class="vgroup">
		<View class="auto-height inactive-light-bg-color role-header-view margin-bottom">
			<Label id="optionalMessageSectionLbl" class="margin-left margin-top margin-bottom h5 inactive-fg-color"/>
		</View>
		<ScrollView id="scrollView" class="vgroup">
			<WebView id="webView" />
			<Button id="acceptBtn" analyticsId="AcceptBtn" class="primary-bg-color dark-color primary-border margin-top-large" onClick="didClickAccept" />
			<Button id="declineBtn" analyticsId="DeclineBtn" class="margin-bottom bg-color primary-fg-color primary-border" onClick="didClickDecline" />
		</ScrollView>
	</View>
	<Widget id="loader" name="embedded" src="ti.loading" class="loader-embedded-fill" />
</Alloy>