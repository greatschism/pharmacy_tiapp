<Alloy>
	<ScrollView>
		<View class="vgroup margin-left margin-right">
			<ScrollableView id="scrollableView" class="margin-top" onScrollend="didScrollend">
				<View class="bg-primary" />
				<View class="bg-quaternary" />
				<View class="bg-quinary" />
				<View class="bg-senary" />
			</ScrollableView>
			<Widget id="pagingControl" src="com.mscripts.pagingcontrol" class="margin-top" onChange="didChangePage" />
			<Widget id="buttonbar" class="margin-top h4 border-transparent bg-primary color-primary" src="com.mscripts.buttonbar" onClick="didClickButtonBar" />
			<View class="margin-top auto-width height-default hgroup">
				<Label id="refillLbl" class="h4 color-tertiary" />
				<Label id="iconLbl" class="margin-left font-icon color-tertiary" />
			</View>
		</View>
	</ScrollView>
</Alloy> 