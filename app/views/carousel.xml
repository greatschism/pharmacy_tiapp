<Alloy>
	<ScrollView>
		<View class="vgroup">
			<ScrollableView id="scrollableView" class="top-20" onScrollend="didScrollend">
				<View class="bg-orange" />
				<View class="bg-black" />
				<View class="bg-red" />
				<View class="bg-orange" />
			</ScrollableView>
			<Widget id="pagingControl" src="com.mscripts.pagingcontrol" class="top-20" onChange="didChangePage" />
			<Widget id="buttonbar" class="h2 font-regular bg-orange white" src="com.mscripts.buttonbar" onClick="didClickButtonBar" />
			<View class="top-20 button-view auto-width hgroup">
				<Label id="refillLbl" class="button-title h3 orange" />
				<ImageView id="refillImg" class="button-img" />
			</View>
		</View>
	</ScrollView>
</Alloy> 