<Alloy>
	<ScrollView>
		<View class="vgroup margin-left margin-right">
			<ScrollableView id="scrollableView" class="margin-top" onScrollend="didScrollend">
				<View class="bg-primary" />
				<View class="bg-senary" />
				<View class="bg-septenary" />
				<View class="bg-nonary" />
			</ScrollableView>
			<Widget id="pagingControl" src="com.mscripts.pagingcontrol" class="padding-top" onChange="didChangePage" />
			<Widget id="buttonbar" class="padding-top fill-width h3 bg-primary fg-primary border-transparent border-radius" src="com.mscripts.buttonbar" onClick="didClickButtonBar" />
			<View class="btn-hview">
				<Label id="refillLbl" class="btn-lbl lbl-fg-primary" />
				<Label id="iconLbl" class="padding-left tiny-icn lbl-fg-primary" />
			</View>
		</View>
	</ScrollView>
</Alloy> 