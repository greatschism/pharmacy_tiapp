<Alloy>
	<ScrollView class="vgroup">
		<View class="content-header-view-wrap">
			<Label id="titleLbl" class="content-header-lbl-wrap"/>
		</View>
		<View class="margin-top form-vgroup">
			<Widget id="nameTxt" src="ti.textfield" class="form-txt prescription-name autocaps-sentences returnkey-next" onReturn="moveToNext"  />
			<View class="h-divider" />
			<!--we don't validate the external store's rx number so we just allow 15 chars with - enabled-->
			<Widget id="rxTxt" src="ti.textfield" class="form-txt external-rx returnkey-next" onReturn="moveToNext"  />
		</View>
		<View class="margin-top content-header-view">
			<Label id="fromLbl" class="content-header-lbl"/>
		</View>
		<View class="margin-top form-vgroup">
			<Widget id="phoneTxt" src="ti.textfield" class="form-txt phone keyboard-phone returnkey-next" onChange="didChangePhone" onReturn="moveToNext" />
			<View class="h-divider" />
			<Widget id="storeOriginalDp" src="ti.dropdown" class="form-dropdown" />
		</View>
		<Button id="submitBtn" class="margin-top margin-bottom primary-btn" onClick="didClickSubmit" />
	</ScrollView>
</Alloy>