<Alloy>
	<ScrollView id="scrollView" class="disable-bounce width-100 vgroup content-width-100">
			<ImageView id="logoImg" class="margin-top-large img-logo" />
			<Widget id="loginInfoUpdateLbl" src="ti.styledlabel" class="margin-top-large margin-left margin-right txt-left attributed-20" onClick="didClickWhatsNew" />
			<Widget id="askInfoLbl" src="ti.styledlabel" class="margin-top-large margin-left margin-right attributed-20 txt-left"/>
			<View id="infoView" class="margin-top-large margin-left margin-right auto-height vgroup border">
				<Widget id="emailTxt" analyticsId="EmailTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-next" onReturn="moveToNext"  />
				<View class="h-divider"/>
				<Widget id="emailVerifyTxt" analyticsId="EmailVerifyTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-next" onReturn="moveToNext"  />
				<View class="h-divider"/>
				<Widget id="passwordTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-done" onReturn="moveToNext" onClick="didChangeToggle"/>
				<View class="h-divider"/>
				<Widget id="passwordVerifyTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-done" onReturn="didClickContinue"/>
			</View>
			<Button id="continueBtn" analyticsId="ContinueBtn" class="margin-top-large margin-bottom primary-bg-color primary-font-color primary-border" onClick="didClickContinue"/>
	</ScrollView>
</Alloy>
