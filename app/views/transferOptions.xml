<Alloy>
	<TableView>
		<HeaderView>
			<View class="content-header-view-wrap">
				<Label id="titleLbl" class="content-header-lbl-wrap" />
			</View>
		</HeaderView>
		<TableViewRow>
			<View class="content-view-with-rswt">
				<Label id="transferAllPrescLbl" class="content-lbl-wrap" />
			</View>
			<Widget id="transferAllPrescSwt" src="ti.switch" class="content-right-swt swt" />
		</TableViewRow>
		<!--<TableViewRow>
			<View class="content-view-with-rswt">
				<Label id="sendTxtMsgLbl" class="content-lbl-wrap" />
			</View>
			<Widget id="sendTxtMsgSwt" src="ti.switch" class="content-right-swt swt" />
	</TableViewRow>-->
		<TableViewRow onClick="didClickReview">
			<View class="content-view-with-child">
				<Label id="reviewLbl" class="content-lbl-wrap" />
			</View>
			<Label class="content-child-icon icon-thin-arrow-right" />
		</TableViewRow>
		<FooterView>
			<View class="auto-height vgroup">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<Button id="transferBtn" class="margin-top margin-bottom primary-btn" onClick="didClickComplete"/>
			</View>
		</FooterView>
	</TableView>
</Alloy>