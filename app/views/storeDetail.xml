<Alloy>
	<ListView platform="ios,android">
		<Templates>
			<ItemTemplate name="options" class="height-50d">
				<View class="auto-height hgroup">
					<ImageView bindId="icon" class="width-20d left-15" />
					<Label bindId="name" class="h2 cloudy left-5" />
					<Label bindId="detail" class="h2 alto left-5" />
				</View>
			</ItemTemplate>
			<ItemTemplate name="hours" class="height-30d">
				<Label bindId="day" class="h4 cloudy left-15" />
				<Label bindId="storehours" class="h4 cloudy right-15" />
			</ItemTemplate>
			<ItemTemplate name="services" class="height-30d">
				<Label bindId="service" class="h4 cloudy left-15" />
			</ItemTemplate>
		</Templates>
		<HeaderView>
			<View class="left-5 right-5 auto-height vgroup">
				<View class="top-20 auto-height">
					<ImageView id="favoriteImg" class="top left width-50d" />
					<View class="auto-height text-view">
						<View class="top left right-140 auto-height vgroup">
							<Label id="titleLbl" class="left h4 bold multi-line gray" text="{store.addressline1}" />
							<Label id="subtitleLbl" class="top-5 left h6 multi-line gray" text="{store.subtitle}" />
						</View>
						<View class="top right auto-height vgroup width-135d">
							<View class="left-5 auto-height hgroup no-hwrap">
								<ImageView class="left-5 distance-img left" />
								<Label text="{store.distance}" class="location-lbl left-10 font-light gray" />
							</View>
							<View class="top-5 left-5 auto-height hgroup no-hwrap">
								<ImageView id="clockImg" class="left width-20d" />
								<Label id="clockLbl" class="location-lbl left-5 font-light" />
							</View>
						</View>
					</View>
				</View>
				<View class="top-5 auto-height">
					<Button id="phoneBtn" title="{store.phone}" class="left width-60 bg-white malibu h3 font-regular" onClick="didClickPhone" />
					<Button id="directionBtn" class="right width-40 bg-white malibu h3 font-regular" onClick="didClickDirection" />
				</View>
				<View class="top-10 button-view width-95 bg-orange" onSingletap="didRefill">
					<ImageView image="/images/rx.png" class="button-img-left" />
					<Label text="Refill a prescriptions here" class="button-title-left h3 white" />
				</View>
				<View class="top-20 auto-height">
					<Button id="addToFavoriteBtn" class="left-15 fill-width bg-white orange border-orange h3 font-light" />
					<ImageView id="homeImg" class="right-15 width-30d"  />
				</View>
				<View class="vspacer" />
			</View>
		</HeaderView>
		<ListSection dataCollection="storeHours">
			<HeaderView>
				<View class="height-20d bg-armadillo">
					<Label id="hoursLbl" class="cloudy left-5" />
				</View>
			</HeaderView>
			<ListItem template="hours" day:text="{day}" storehours:text="{storehours}" />
		</ListSection>
		<ListSection dataCollection="storeServices">
			<HeaderView>
				<View class="height-20d bg-armadillo">
					<Label id="servicesLbl" class="cloudy left-5" />
				</View>
			</HeaderView>
			<ListItem template="services" service:text="{service}" />
		</ListSection>
	</ListView>
	<ScrollView class="vgroup" platform="mobileweb">
		<View class="left-5 right-5 auto-height vgroup">
			<View class="top-20 auto-height">
				<ImageView id="favoriteImg" class="top left width-50d" />
				<View class="auto-height text-view">
					<View class="top left right-140 auto-height vgroup">
						<Label id="titleLbl" class="left h4 bold multi-line gray" text="{store.addressline1}" />
						<Label id="subtitleLbl" class="top-5 left h6 multi-line gray" text="{store.subtitle}" />
					</View>
					<View class="top right auto-height vgroup width-135d">
						<View class="left-5 auto-height hgroup no-hwrap">
							<ImageView class="left-5 distance-img left" />
							<Label text="{store.distance}" class="location-lbl left-10 font-light gray" />
						</View>
						<View class="top-5 left-5 auto-height hgroup no-hwrap">
							<ImageView id="clockImg" class="left width-20d" />
							<Label id="clockLbl" class="location-lbl left-5 font-light" />
						</View>
					</View>
				</View>
			</View>
			<View class="top-5 auto-height">
				<Button id="phoneBtn" title="{store.phone}" class="left width-60 bg-white malibu h3 font-regular" />
				<Button id="directionBtn" class="right width-40 bg-white malibu h3 font-regular" />
			</View>
			<View class="top-10 button-view width-95 bg-orange" onSingletap="didRefill">
				<ImageView image="/images/rx.png" class="button-img-left" />
				<Label text="Refill a prescriptions here" class="button-title-left h3 white" />
			</View>
			<View class="top-20 auto-height">
				<View class="auto-height left-15">
					<Button id="addToFavoriteBtn" class="fill-width bg-white orange border-orange h3 font-light" />
				</View>
				<ImageView id="homeImg" class="right-15 width-30d"  />
			</View>
			<View class="vspacer" />
		</View>
		<TableView class="auto-height" dataCollection="storeHours">
			<HeaderView>
				<View class="height-20d bg-armadillo">
					<Label text="Store hours" class="cloudy left-5" />
				</View>
			</HeaderView>
			<TableViewRow class="height-30d">
				<Label text="{day}" class="h4 cloudy left-15" />
				<Label text="{storehours}" class="h4 cloudy right-15" />
			</TableViewRow>
		</TableView>
		<TableView class="auto-height" dataCollection="storeServices">
			<HeaderView>
				<View class="height-20d bg-armadillo">
					<Label text="Store services" class="cloudy left-5" />
				</View>
			</HeaderView>
			<TableViewRow class="height-30d">
				<Label text="{service}" class="h4 cloudy left-15" />
			</TableViewRow>
		</TableView>
	</ScrollView>
</Alloy>