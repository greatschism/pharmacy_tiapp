<Alloy>
	<Widget id="pickupModePicker" src="ti.optionpicker" class="optionpicker" onClick="updatePickupMode">
		<View class="content-header-view role-header-view">
			<Label id="pickupModeSectionLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="pickupModeCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickPickupModeClose" />
		</View>
	</Widget>
	<ScrollView id="scrollView" class="vgroup">
		<Label id="titleLbl" class="margin-top subtitle-centered-wrap" />
		<ImageView id="successImg" class="margin-top" />
		<!--PHA-1250-->
		<!--<View class="auto-height" onClick="didClickHelp">
		<View class="content-view-with-ricon">
		<Label id="descLbl" class="content-lbl-wrap" />
		</View>
		<Label class="content-tertiary-right-icon icon-help" />
		</View>-->
		<!--PHA-1250-->
		<Label id="descLbl" class="margin-top lbl-wrap" />
		<View class="margin-top content-header-view">
			<Label id="prescLbl" class="content-header-lbl-with-ricon" />
			<Button id="addBtn" class="content-header-right-icon icon-add" onClick="didClickAdd" />
		</View>
		<View id="containerView" class="top margin-bottom auto-height vgroup">
			<!--PHA-1250-->
			<!--<Require id="rxTxt" src="templates/rxTxtWithRIcon" onClick="didClickRemove" />-->
			<Require id="rxTxt" src="templates/rxTxtWithRIcon" onClick="didClickHelp" />
			<!--PHA-1250-->
		</View>
		<View class="content-header-view">
			<Label id="pickupLbl" class="content-header-lbl" />
		</View>
		<View id="pickupView" class="auto-height vgroup">
			<View id="pickupModeView" class="auto-height" onClick="didClickPickupMode">
				<View class="content-view-with-child">
					<Label id="pickupModeLbl" class="content-lbl-wrap" />
				</View>
				<Label class="content-child-icon icon-thin-arrow-right" />
			</View>
			<View id="pickupDividerView" class="h-divider-light" />
		</View>
		<View class="content-header-view" if="Alloy.CFG.refill_type_phone_enabled">
			<Label id="phoneLbl" class="content-header-lbl" />
		</View>
		<Widget id="phoneTxt" src="ti.textfield" class="margin-top txt phone keyboard-phone returnkey-done" onChange="didChange" onReturn="didClickRefill"  if="Alloy.CFG.refill_type_phone_enabled" />
		<View id="dividerView" class="margin-top h-divider-light" />
		<Button id="refillBtn" class="margin-top margin-bottom primary-btn" onClick="didClickRefill" />
	</ScrollView>
	<View id="storeView" class="hide content-view role-ignore" onClick="didClickEdit">
		<View class="content-master-view-75">
			<Label id="storeTitleLbl" class="content-title" />
			<Label id="storeSubtitleLbl" class="content-subtitle" />
		</View>
		<View class="content-detail-view-25">
			<Button id="editBtn" class="content-detail-tertiary-icon icon-edit" />
		</View>
	</View>
	<View id="mailorderView" class="hide content-view role-ignore">
		<Label id="mailorderLbl" class="content-lbl-wrap" />
	</View>
</Alloy>