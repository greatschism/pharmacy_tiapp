<Alloy>
	<ScrollView class="vgroup">
		<Label id="txtMsgTitle" class="subtitle-centered margin-top" if="$.args.txtMsgTitle"/>
		<Label id="signUpTitle" class="subtitle-centered margin-top" if="$.args.signUpTitle"/>
		<Label id="txtHelpTitle" class="subtitle-centered margin-top" if="$.args.txtHelpTitle"/>
		<Label id="txtNotReceiveTitle" class="subtitle-centered margin-top" if="$.args.txtNotReceiveTitle"/>
		<ImageView id="txtSuccessImg" class="margin-top" if="$.args.txtSuccessImg"/>
		<ImageView id="txtFailImg" class="margin-top" if="$.args.txtFailImg"/>
		<Label id="txtMsgLbl" class="lbl-wrap margin-top" if="$.args.txtMsgLbl"/>
		<Label id="signUpMsgLbl" class="lbl-wrap margin-top" if="$.args.signUpLbl"/>
		<Label id="txtHelpMsgLbl" class="lbl-wrap margin-top" if="$.args.txtHelpLbl"/>
		<Label id="txtNotReceiveLbl" class="lbl-wrap margin-top" if="$.args.txtNotReceiveLbl"/>
		<Widget id="txtCode"   src="ti.textfield" class="txt-48 returnkey-done margin-top margin-bottom" if="$.args.txtCode"/>
		<Button id="txtMsgBtn" class="primary-btn margin-top margin-bottom" onClick="replyTextMessage" if="$.args.replyTextMsgBtn"/>
		<Button id="txtNotReceiveBtn" class="primary-btn margin-top margin-bottom" if="$.args.txtNotReceiveBtn"/>
		<Button id="sendTxtSignUpBtn" class="secondary-btn margin-top margin-bottom" onClick="sendTextSignUpMessage" if="$.args.sendMeTextAgainSignUpBtn"/>
		<Button id="sendTxtTextHelpBtn" class="secondary-btn margin-top margin-bottom" onClick="sendTextTextHelpMessage" if="$.args.sendMeTextAgainTextHelpBtn" />
		<Button id="skipSignUpAttr" class="tertiary-btn margin-top margin-bottom" onClick="skipClicked" if="$.args.skipSignUpAttr"/>
		<Button id="skipNoTextMsgAttr" class="tertiary-btn margin-top margin-bottom" onClick="skipClicked" if="$.args.skipNoTextMsgAttr"/>
		<Button id="skipTxtNotReceive" class="tertiary-btn margin-top margin-bottom" onClick="skipClicked" if="$.args.skipTxtNotReceiveAttr"/>
		<Widget id="stillNotReceiveTextAttr" src="ti.styledlabel" class="attributed-wrap margin-top margin-bottom" onClick="stillNotReceivingText" if="$.args.stillReceiveTextAttr"/>
		<Widget id="phoneNumberAttr" src="ti.styledlabel" class="attributed-wrap margin-top margin-bottom" onClick="checkPhoneNumberClicked" if="$.args.checkPhoneAttr"/>
		<Widget id="txtMsgAttr" src="ti.styledlabel" class="attributed-wrap margin-top margin-bottom" onClick="didNotReceiveClicked" if="$.args.didNotReceiveTextAttr"/>
	</ScrollView>
</Alloy>
