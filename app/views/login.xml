<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="logoImg" class="img-padding-top logo-img" />
		<Label id="hintLbl" class="img-padding-top paragraph-lbl" />
		<View class="padding-top form-group vgroup">
			<Widget id="unameTxt" src="ti.textfield" class="form-txt returnkey-next"  />
			<View class="hseparator" />
			<Widget id="passwordTxt" src="ti.textfield" class="form-txt txt-right-btn returnkey-done"  onClick="didClickPwd" />
		</View>
		<View class="padding-top margin-left margin-right auto-height">
			<Label id="keepMeLbl" class="left text-left lbl" />
			<Widget id="keepMeSwt" src="ti.switch" class="right swt" onTouch="handleScroll"  />
		</View>
		<Button id="loginBtn" class="btn-padding-top padding-bottom primary-btn" onClick="didClickLogin" />
		<Widget id="signupLbl" src="ti.styledlabel" class="margin-left margin-right margin-bottom link-multi-line" onClick="didClickSignup" />
	</ScrollView>
</Alloy> 