<Alloy>
	<ScrollView id="scrollView">
		<View class="vgroup">
			<ImageView id="logoImg" class="margin-top-large img-logo" />
			<Label id="titleLbl" class="margin-top-large margin-left margin-right" />
			<View class="margin-top-large margin-left margin-right auto-height vgroup border">
				<Widget id="usernameTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-next" onReturn="moveToNext"  />
				<View class="h-divider" />
				<Widget id="passwordTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-done" onReturn="didClickLogin" onClick="didChangeToggle"/>
			</View>
			<View id="autoLoginView" class="margin-top margin-left margin-right auto-height" >
				<Label id="autoLoginLbl" class="left right-40" onPostlayout="didPostlayout" />
				<Widget id="autoLoginSwt" src="ti.switch" class="right swt" onChange="didChangeAutoLogin"/>
			</View>
			<Button id="loginBtn" class="primary-bg-color primary-light-fg-color primary-border" onClick="didClickLogin" />
			<Widget id="forgotPwdAttr" src="ti.styledlabel" class="margin-top attributed-wrap" onClick="didClickForgotPassword" />
			<Widget id="signupAttr" src="ti.styledlabel" class="margin-top margin-bottom attributed-wrap" onClick="didClickSignup" />
		</View>
		<Label id="aboutAttr" class="margin-right bottom" onClick="didClickAbout"/>
		<Widget id="tooltip" src="ti.tooltip" class="tooltip-unfilled-arrow-up content-primary-tooltip ">
			<View class="auto-height vgroup">
				<Label id="tooltipLbl" class="lbl-wrap" />
				<Button id="tooltipHideBtn" class="margin-top margin-bottom tooltip-primary-btn" onClick="didClickHide" />
			</View>
		</Widget>
	</ScrollView>
</Alloy> 