<Alloy>
	<ScrollView class="vgroup bg-primary">
		<Label id="titleIcon" class="margin-top font-icon-large color-primary" />
		<Widget id="headerLbl" src="com.mscripts.styledlabel" class="styled-lbl" />
		<View class="form-group vgroup">
			<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<Widget id="passwordTxt" src="com.mscripts.textfield" class="form-txt return-done" onReturn="moveToNext" onRightclick="didRightclickPwd" />
			<View class="hseparator" />
			<View class="height-default">
				<Label id="keepMeLbl" class="padding-left fill-width" />
				<Widget id="keepMeSwt" src="com.mscripts.switch" class="padding-right swt" onTouch="handleScroll" />
			</View>
		</View>
		<Button id="loginBtn" class="btn-secondary" onClick="didClickLogin" />
		<Widget id="footerLbl" src="com.mscripts.styledlabel" class="margin-bottom styled-lbl" onClick="didClickSignup" />
	</ScrollView>
</Alloy> 