<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="logoImg" class="img-padding-top logo-img" />
		<Label id="hintLbl" class="img-padding-top paragraph-lbl" />
		<View class="padding-top form-group vgroup">
			<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onReturn="moveToNext" />
			<View class="hseparator" />
			<Widget id="passwordTxt" src="com.mscripts.textfield" class="form-txt txt-right-btn returnkey-done" onReturn="moveToNext" onClick="didClickPwd" />
		</View>
		<View class="padding-top margin-left margin-right auto-height">
			<Label id="keepMeLbl" class="left text-left lbl" />
			<Switch id="keepMeSwt" value="true" class="right swt" onChange="handleScroll" onTouch="handleScroll" titleOn="" titleOff="" backgroundImage="/images/toggle_btn_on.png" width="80" height="30"/>
		</View>
		<Button id="loginBtn" class="btn-padding-top padding-bottom primary-btn" onClick="didClickLogin" />
		<Widget id="signupLbl" src="com.mscripts.styledlabel" class="margin-left margin-right margin-bottom link-multi-line" onClick="didClickSignup" />
	</ScrollView>
</Alloy>