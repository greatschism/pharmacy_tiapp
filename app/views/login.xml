<Alloy>
	<View class="bg-orange">
		<ScrollView id="content" class="vgroup">
			<ImageView class="logo-img" />
			<Widget id="headerLbl" src="com.mscripts.styledlabel" class="top-10 width-90 height-50d h3 font-light bg-orange white text-center" />
			<View class="top-20 width-90 auto-height vgroup bg-white rounded-corner-4 border-gray">
				<Widget id="unameTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
				<View class="hseparator" />
				<Widget id="passwordTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" onRightclick="didRightclickPwd" />
				<View class="hseparator" />
				<View id="keepMeView">
					<Label id="keepMeLbl" class="fill-width h3 font-regular cloudy" />
					<Widget id="keepMeSwt" src="com.mscripts.switch" />
				</View>
			</View>
			<Button id="loginBtn" class="top-20 width-90 bg-white orange h2 font-regular" />
			<View class="vspacer" />
		</ScrollView>
		<Widget id="footerLbl" src="com.mscripts.styledlabel" class="width-90 height-50d h3 font-light bg-orange white text-center" />
	</View>
</Alloy> 