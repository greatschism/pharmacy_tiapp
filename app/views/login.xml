<Alloy>
	<ScrollView id="scrollView">
		<View class="vgroup">
			<ImageView id="logoImg" class="margin-top" />
			<Label id="titleLbl" class="margin-top lbl-centered-wrap" />
			<View class="margin-top form-vgroup">
				<Widget id="usernameTxt" src="ti.textfield" class="form-txt returnkey-next" onReturn="moveToNext"  />
				<View class="h-divider" />
				<Widget id="passwordTxt" src="ti.textfield" class="form-txt txt-right-btn returnkey-done" onReturn="didClickLogin" onClick="didChangeToggle"/>
			</View>
			<View id="autoLoginView" class="margin-top auto-height margin-bottom" >
				<Label id="autoLoginLbl" class="lbl-with-rswt" onPostlayout="didPostlayout" />
				<Widget id="autoLoginSwt" src="ti.switch" class="margin-right swt" onChange="didChangeAutoLogin"/>
			</View>
			<Button id="loginBtn" class="margin-top primary-btn" onClick="didClickLogin" />
			<Widget id="forgotPwdAttr" src="ti.styledlabel" class="margin-top attributed-wrap" onClick="didClickForgotPassword" />
			<Widget id="signupAttr" src="ti.styledlabel" class="margin-top margin-bottom attributed-wrap" onClick="didClickSignup" />
		</View>
		<Widget id="tooltip" src="ti.tooltip" class="tooltip-unfilled-arrow-up content-primary-tooltip ">
			<View class="auto-height vgroup">
				<Label id="tooltipLbl" class="lbl-wrap" />
				<Button id="tooltipHideBtn" class="margin-top margin-bottom tooltip-primary-btn" onClick="didClickHide" />
			</View>
		</Widget>
	</ScrollView>
</Alloy> 