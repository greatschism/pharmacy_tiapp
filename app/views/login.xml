<Alloy>
	<View class="bg-orange">
		<View id="content">
			<ScrollView>
				<View class="vgroup">
					<ImageView class="logo-img" />
					<View class="auto-width auto-height hgroup top-10">
						<Label id="signinLbl" class="auto-width h3 font-light white" />
						<Label id="pharmacyLbl" class="auto-width h3 font-regular white left-5" />
					</View>
					<View class="top-20 width-85 auto-height vgroup bg-white rounded-corner-4 border-gray">
						<Widget id="unameTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" />
						<View class="hseparator" />
						<Widget id="passwordTxt" src="com.mscripts.textfield" class="fill-width black txt h3 font-regular" onRightclick="didRightclickPwd" />
						<View class="hseparator" />
						<View id="keepMeView">
							<Label id="keepMeLbl" class="fill-width h3 font-regular cloudy" />
							<Widget id="keepMeSwt" src="com.mscripts.switch" />
						</View>
					</View>
					<Button id="loginBtn" class="top-20 width-85 bg-white orange h2 font-regular" />
					<View class="vspacer" />
				</View>
			</ScrollView>
		</View>
		<View id="footer" class="auto-width auto-height hgroup">
			<Label id="needLbl" class="auto-width h3 font-light white" />
			<Label id="createLbl" class="auto-width h3 font-regular white left-5" />
		</View>
	</View>
</Alloy> 