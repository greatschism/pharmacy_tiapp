<Alloy>
	<ScrollView id="scrollView" class="vgroup bg-orange">
		<ImageView id="logoImg" />
		<Widget id="headerLbl" src="com.mscripts.styledlabel" class="top-10 width-90 auto-height h3 font-light white text-center" />
		<View class="top-20 width-90 auto-height vgroup bg-white rounded-corner-4 border-gray">
			<Widget id="unameTxt" src="com.mscripts.textfield" class="fill-width black height-50d no-border h3 font-regular" onReturn="moveToNext" />
			<View class="hseparator" />
			<Widget id="passwordTxt" src="com.mscripts.textfield" class="fill-width black height-50d no-border h3 font-regular" onRightclick="didRightclickPwd" />
			<View class="hseparator" />
			<View class="height-50d">
				<Label id="keepMeLbl" class="left-10 fill-width h3 cloudy" />
				<Widget id="keepMeSwt" src="com.mscripts.switch" class="right-10" onTouch="handleScroll" />
			</View>
		</View>
		<Button id="loginBtn" class="top-20 width-90 bg-white orange h2" onClick="didClickLogin" />
		<View class="vspacer" />
	</ScrollView>
	<View id="footerView" class="bg-orange">
		<Widget id="footerLbl" src="com.mscripts.styledlabel" class="width-90 auto-height h3 font-light white text-center" onClick="didClickSignup" />
	</View>
</Alloy> 