<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="logoImg" class="img-padding-top logo" />
		<Widget id="headerLbl" src="com.mscripts.styledlabel" class="padding-top title-lbl fg-primary" />
		<View class="form-group vgroup">
		<Widget id="unameTxt" src="com.mscripts.textfield" class="txt text-center padding-top returnkey-done form-txt return-next" onReturn="moveToNext" />
		<!--<View class="hseparator" />-->
		<Widget id="passwordTxt" src="com.mscripts.textfield" class="txt text-center returnkey-done form-txt return-next" onReturn="moveToNext" onRightclick="didRightclickPwd" />
		<!--<View class="hseparator" />-->
		<View class="default-height">
		<Label id="keepMeLbl" class="padding-left fill-width" />
		<Widget id="keepMeSwt" src="com.mscripts.switch" class="padding-right swt" onTouch="handleScroll" />
		</View>
		</View>
		<Button id="loginBtn" class="primary-btn padding-bottom" onClick="didClickLogin" />
		<Widget id="footerLbl" src="com.mscripts.styledlabel" class="margin-bottom link-single-line fg-primary" onClick="didClickSignup" />
	</ScrollView>
</Alloy> 