<Alloy>
	<Widget id="rightNavBtn" src="ti.navbutton" class="nav-icon icon-map" onClick="didClickRightNavBtn" />
	<View id="headerView" class="top auto-height vgroup" onPostlayout="didPostlayout" >
		<Require id="patientSwitcher" src="templates/patientSwitcher" onChange="didChangePatient" if="Alloy.Globals.isLoggedIn" />
		<View id="searchbar" class="top search-bar">
			<Widget id="searchTxt" src="ti.textfield" class="top returnkey-done search-txt" onFocus="didFocusSearch" onClear="didClearSearch" onChange="didChangeSearch" onReturn="didReturnSearch" />
		</View>
	</View>
	<View id="containerView">
		<View id="mapView" ns="Alloy.Globals.Map" class="map-view" onClick="didClickMap" onRegionchanged="didRegionchanged" />
		<TableView id="storeTableView" class="show" onClick="didClickStoreTable">
			<FooterView platform="ios">
				<View class="auto-height" />
			</FooterView>
		</TableView>
		<TableView id="geoTableView" class="hide" onClick="didClickGeoTable">
			<FooterView platform="ios">
				<View class="auto-height" />
			</FooterView>
		</TableView>
		<Widget id="loader" name="embedded" src="ti.loading" class="loader-embedded" />
	</View>
</Alloy> 