<Alloy>
	<Widget id="rightNavBtn" src="ti.navbutton" class="nav-icon icon-map" onClick="didClickRightNavBtn" />
	<View id="searchbar" class="top search-bar">
		<Widget id="searchTxt" src="ti.textfield" class="top returnkey-search search-txt" onChange="didChangeSearch" onClear="didChangeSearch"  />
	</View>
	<View id="containerView">
		<View id="mapView" ns="Alloy.Globals.Map" class="map-view" onClick="didClickMap" />
		<TableView id="tableView" class="show" onClick="didClickTableView">
			<FooterView platform="ios">
				<View class="auto-height" />
			</FooterView>
		</TableView>
	</View>
</Alloy> 