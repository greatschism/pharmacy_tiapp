<Alloy>
	<Button id="toggleBtn" class="actionbar-right-btn" onClick="didToggle" />
	<View>
		<View id="mapContainer">
			<View id="mapView" module="ti.map" platform="ios,android" />
			<WebView id="mapView" platform="mobileweb" />
		</View>
		<View id="listContainer">
			<Widget id="searchbar" src="com.mscripts.textfield" />
			<ListView id="listView" platform="ios,android" defaultItemTemplate="favourites" onItemclick="didItemClick">
				<Templates>
					<ItemTemplate name="favourites" class="row">
						<ImageView class="favourite" />
						<View class="title-view">
							<Label bindId="title" class="title" />
							<Label bindId="subtitle" class="subtitle" />
						</View>
						<View class="distance-view">
							<ImageView class="distance-img" />
							<Label bindId="distance" class="distance" />
						</View>
						<ImageView class="child" />
					</ItemTemplate>
					<ItemTemplate name="nearby" class="row">
						<View class="title-view">
							<Label bindId="title" class="title" />
							<Label bindId="subtitle" class="subtitle" />
						</View>
						<View class="distance-view">
							<ImageView class="distance-img" />
							<Label bindId="distance" class="distance" />
						</View>
						<ImageView class="child" />
					</ItemTemplate>
				</Templates>
				<ListSection dataCollection="stores" dataTransform="transformFunction">
					<ListItem template="{template}" title:text="{title}" subtitle:text="{subtitle}" distance:text="{distance}" />
				</ListSection>
			</ListView>
			<TableView id="listView" platform="mobileweb" dataCollection="stores" onClick="didItemClick">
				<TableViewRow class="row">
					<ImageView class="favourite" visible="{favourite}" />
					<View class="title-view">
						<Label text="{title}" class="title" />
						<Label text="{subtitle}" class="subtitle" />
					</View>
					<View class="distance-view">
						<ImageView class="distance-img" />
						<Label text="{distance}" class="distance" />
					</View>
					<ImageView class="child" />
				</TableViewRow>
			</TableView>
		</View>
	</View>
</Alloy> 