<Alloy>
	<Button id="toggleBtn" class="nav-bar-right-icon" onClick="didToggle" />
	<View>
		<View id="mapContainer">
			<View id="mapView" ns="Alloy.Globals.Map" onClick="didAnnotationClick" />
		</View>
		<View id="listContainer" class="vgroup bg-senary show">
			<Widget id="searchbar" src="com.mscripts.textfield" class="txt" onReturn="didReturn" onClear="didSearch" />
			<TableView id="listView" dataCollection="stores" onClick="didItemClick">
				<TableViewRow class="auto-height" itemId="{storeid}" className="store">
					<View class="list-item-view">
						<Label class="list-item-left-icon color-tertiary" text="{favorite}" if="Alloy.Globals.loggedIn" />
						<View class="list-item-content-view">
							<View class="left width-60 auto-height vgroup">
								<Label text="{addressline1}" class="fill-width color-secondary h3-fixed" />
								<Label text="{subtitle}" class="fill-width color-quaternary h5-fixed" />
							</View>
							<View class="bottom right width-40 auto-height" visible="{showDistance}">
								<Label class="distance-icon padding-left font-icon-tiny color-quaternary" />
								<Label text="{distance}" class="distance-lbl fill-width h6-fixed" />
							</View>
						</View>
					</View>
					<Label class="list-item-child" />
				</TableViewRow>
			</TableView>
		</View>
	</View>
</Alloy> 