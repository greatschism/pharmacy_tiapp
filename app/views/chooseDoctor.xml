<Alloy>
	<ListView id="listView" platform="ios,android" defaultItemTemplate="doctor" onItemclick="didItemClick">
		<Templates>
			<ItemTemplate name="doctor" class="auto-height top-10">
				<View class="right-25 auto-height bottom-10">
					<ImageView bindId="profile" class="profile-img left-10" />
					<Label bindId="doctor" class="doctor auto-height h3 black multi-line" />
				</View>
				<ImageView class="child" />
			</ItemTemplate>
		</Templates>
		<ListSection dataCollection="doctors" dataTransform="transformDoctor">
			<HeaderView>
				<View class="height-40d bg-aeroblue">
					<Label id="appointmentLbl" class="button-title width-95 h4 text-center gulfstream touch-disabled" />
				</View>
			</HeaderView>
			<ListItem itemId="{doctor_id}" profile:image="{thumbnail_url}" doctor:text="{long_name}" />
		</ListSection>
	</ListView>
	<TableView id="listView" platform="mobileweb" dataCollection="doctors" dataTransform="transformDoctor" onClick="didItemClick">
		<HeaderView>
			<View class="height-40d bg-aeroblue">
				<Label id="appointmentLbl" class="button-title width-90 h4 text-center gulfstream touch-disabled" />
			</View>
		</HeaderView>
		<TableViewRow class="auto-height top-10" rowId="{doctor_id}">
			<View class="top auto-height bottom-10">
				<View class="top right-25 auto-height">
					<View class="top auto-height">
						<ImageView image="{thumbnail_url}" class="profile-img left-10" />
					</View>
					<Label text="{long_name}" class="doctor right-25 auto-height h3 black multi-line" />
				</View>
				<ImageView class="child" />
			</View>
		</TableViewRow>
	</TableView>
</Alloy>