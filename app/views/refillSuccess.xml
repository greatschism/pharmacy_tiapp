<Alloy>
	<TableView id="tableView">
		<HeaderView>
			<View class="auto-height vgroup">
				<ImageView id="successImg" />
				<Label id="lbl" class="margin-top margin-bottom lbl-wrap" />
			</View>
		</HeaderView>
		<FooterView>
			<View class="auto-height vgroup" onClick="handleEvent">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<!--footer separator seems to disappear on iOS-->
				<View class="h-divider-light" platform="ios" />
				<Label id="signupLbl" class="margin-top lbl-wrap" if="$.args.signupEnabled" />
				<Button id="signupBtn" class="margin-top primary-btn" onClick="didClickSignup" if="$.args.signupEnabled" />
				<Button id="doneBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickDone" />
			</View>
		</FooterView>
	</TableView>
</Alloy>
