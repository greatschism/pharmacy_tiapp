<Alloy>
	<TableView id="tableView">
		<HeaderView>
			<View class="auto-height vgroup">
				<ImageView id="successImg" />
				<Label id="lbl" class="margin-top margin-bottom lbl-wrap" />
			</View>
		</HeaderView>
		<!--moving if="Alloy.Globals.isLoggedIn" to footerView tag might
		throw null pointer on android(considered as value passed but null)-->
		<FooterView>
			<View class="auto-height vgroup">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<Label id="signupLbl" class="margin-top lbl-wrap" if="!Alloy.Globals.isLoggedIn" />
				<Button id="signupBtn" class="margin-top primary-btn" onClick="didClickSignup" if="!Alloy.Globals.isLoggedIn" />
				<Button id="doneBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickDone" />
			</View>
		</FooterView>
	</TableView>
</Alloy>
