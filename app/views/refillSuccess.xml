<Alloy>
	<TableView id="tableView">
		<HeaderView>
			<View class="auto-height vgroup">
				<Label id="titleLbl" class="margin-top title-centered-wrap" />
				<ImageView id="successImg" class="margin-top margin-bottom" />
				<Label id="partialLbl" class="margin-top margin-bottom lbl-wrap" if="$.isPartial" />
			</View>
		</HeaderView>
		<!--moving if="Alloy.Globals.isLoggedIn" to footerView tag might throw null pointer on android(considered as value passed but null)-->
		<FooterView>
			<View class="auto-height vgroup">
				<Label id="signupLbl" class="margin-top lbl-wrap" if="!Alloy.Globals.isLoggedIn" />
				<Button id="signupBtn" class="margin-top margin-bottom primary-btn" onClick="didClickSignup" if="!Alloy.Globals.isLoggedIn" />
			</View>
		</FooterView>
	</TableView>
</Alloy>
