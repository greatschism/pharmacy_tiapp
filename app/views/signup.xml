<Alloy>
	<ScrollView id="scrollView" class="vgroup bg-primary">
		<Label id="titleIcon" class="margin-top font-icon-large fg-primary" />
		<Label id="hintLbl" class="styled-lbl multi-line" />
		<View class="auto-height">
			<View id="userView" class="form-group vgroup">
				
				
				<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt txt text-center returnkey-done padding-top return-next" onReturn="moveToNext" />
				
				<Widget id="dob" src="com.mscripts.dropdown" class="txt text-center returnkey-done form-dropdown padding-bottom" onReturn="moveToNext" />
				
				<Widget id="unameTxt" src="com.mscripts.textfield" class="txt text-center returnkey-done form-txt return-next" onReturn="moveToNext" />
							
			<View id="passwordView" class="auto-height">
				<Widget id="passwordTooltip" src="com.mscripts.tooltip" /><!--class="h5" />-->
				<View id="inputView" class="form-group">
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="txt text-center left form-txt return-done" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="moveToNext" />
					<!--<Widget id="toggleSwt" src="com.mscripts.switch" class="padding-right swt" onChange="didToggle" onTouch="handleScroll" />-->
					
			</View>
				</View>
				
				<Widget id="toggleSwt" src="com.mscripts.switch" class="padding-right swt" onChange="didToggle" onTouch="handleScroll" />
				<Label id="showPassword" class="styled-lbl multi-line" />
			</View>
		</View>
		<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="styled-lbl" />
		<Button id="createBtn" class="margin-bottom secondary-btn" onClick="didClickCreate" />
	</ScrollView>
</Alloy>