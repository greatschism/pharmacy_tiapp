<Alloy>
	<ScrollView class="vgroup">
		<ImageView id="logoImg" class="margin-top" />
		<View id="nameView" class="margin-top-large margin-left margin-right auto-height vgroup border">
			<View id="txtView" class="auto-height" >
				<Widget id="fnameTxt" src="ti.textfield" class="top left right-disabled width-50 txt border-disabled name autocaps-words returnkey-next" onReturn="moveToNext" />
				<Widget id="lnameTxt" src="ti.textfield" class="top left-disabled right width-50 txt border-disabled name autocaps-words returnkey-next" onReturn="moveToNext" />
				<View id="vDividerView" class="v-divider"/>
			</View>
			<View class="h-divider"/>
			<Widget id="dob" src="ti.dropdown" class="top left-disabled left dropdown border-disabled dob date" onReturn="moveToNext" />
		</View>
		<View id="containerView" class="margin-top-large margin-left margin-right auto-height vgroup border">
			<Widget id="emailTxt" src="ti.textfield" class="top left right txt border-disabled keyboard-email returnkey-next" onReturn="moveToNext" />
			<View class="h-divider"/>
			<Widget id="passwordTxt" src="ti.textfield" class="top left right txt border-disabled returnkey-next"  onFocus="didFocusPassword" onBlur="didBlurFocusPassword" onReturn="moveToNext" onPostlayout="didPostlayoutPasswordContainerView" onClick="didToggleShowPassword"/>
		</View>
		<View id="rxContainer" class="margin-top-large margin-left margin-right auto-height vgroup border">
			<Widget id="rxNoTxt" src="ti.textfield" class="rx top left right txt border-disabled keyboard-number returnkey-next" onFocus="didFocusRx" onBlur="didBlurFocusRx" onChange="didChangeRx" onPostlayout="didPostlayoutRxContainerView" onClick="didClickHelp"/>
			<View class="h-divider"/>
			<View id="storeView" class="auto-height" onClick="didClickPharmacy">
				<Label id="storeTitleLbl" class="margin-top margin-bottom margin-left margin-right-small" />
				<Label id="arrowLbl" class="margin-right-large i6 inactive-fg-color icon-thin-arrow-right touch-disabled" />
			</View>
		</View>
		<Widget id="agreementLbl" src="ti.styledlabel" class="margin-top-large margin-left margin-right attributed" onClick="didClickAgreement" />
		<Button id="signupBtn" class="margin-bottom primary-bg-color primary-light-fg-color primary-border" onClick="didClickSignup"/>
		<Widget id="passwordTooltip" src="ti.tooltip" class="margin-left margin-right inactive-bg-color inactive-border hide" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
		<Widget id="rxTooltip" src="ti.tooltip" class="margin-left margin-right inactive-bg-color inactive-border hide" onClick="didClickTooltip" onPostlayout="didPostlayoutTooltip" />
	</ScrollView>
</Alloy>