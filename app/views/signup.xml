<Alloy>
	<ScrollView id="scrollView" class="vgroup bg-primary">
		<Label id="orderPickUpLblIcon" class="large-icon center primary-color" />
		<Label id="titleIcon" class="margin-top font-icon-large fg-primary" />
		<Label id="hintLbl" class="styled-lbl multi-line" />
		<View class="auto-height vgroup padding-top padding-bottom ">
			<View id="userView" class="form-group vgroup padding-top padding-bottom">

				<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt text-center returnkey-done return-next" onReturn="moveToNext" />
				<View class="hseparator" />
				<Widget id="dob" src="com.mscripts.dropdown" class="form-txt text-center returnkey-done return-next" onReturn="moveToNext" />
			</View>
			<Widget id="passwordTooltip" class="arrow-bottom tooltip" src="com.mscripts.tooltip" />
			<View id="userViewTwo" class="form-group vgroup padding-top padding-bottom ">
				
				<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt text-center returnkey-done return-next" onReturn="moveToNext" />
				<View class="hseparator" />
				
				<View id="passwordView" class="auto-height">
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="form-txt text-center returnkey-done return-next" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="moveToNext" />
				</View>
			</View>
			<View class="default-height">
				<Widget id="toggleSwt" src="com.mscripts.switch" class="swt" onChange="didToggle" onTouch="handleScroll" />
				<Label id="showPassword" class="single-line " />		
			</View>
				<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="multi-line padding-top padding-bottom " />
				<Button id="createBtn" class="margin-bottom primary-btn padding-top padding-bottom" onClick="didClickCreate" />
			<!--</View>-->
		</View>
	</ScrollView>
</Alloy>