<Alloy>
	<ScrollView id="scrollView" class="vgroup bg-primary">
		<Label id="titleIcon" class="margin-top font-icon-large color-primary" />
		<Label id="hintLbl" class="styled-lbl multi-line" />
		<View class="auto-height">
			<View id="userView" class="form-group vgroup">
				<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
				<View class="hseparator" />
				<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt return-next" onReturn="moveToNext" />
			</View>
			<View id="passwordView" class="auto-height vgroup">
				<Widget id="passwordTooltip" src="com.mscripts.tooltip" class="h5" />
				<View id="inputView" class="form-group">
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="left form-txt return-done" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="moveToNext" />
					<Widget id="toggleSwt" src="com.mscripts.switch" class="padding-right swt" onChange="didToggle" onTouch="handleScroll" />
				</View>
			</View>
		</View>
		<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="styled-lbl" />
		<Button id="createBtn" class="margin-bottom btn-secondary" onClick="didClickCreate" />
	</ScrollView>
</Alloy>