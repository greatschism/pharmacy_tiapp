<Alloy>
	<TableView id="tableView">
		<HeaderView>
			<View class="auto-height vgroup" onClick="handleEvent">
				<View class="margin-top margin-left margin-right auto-height">
					<Label id="favouriteIconLbl" class="left i4 width-15 primary-fg-color" if="Alloy.Globals.isLoggedIn" />
					<View id="storeContentView" class="top left-15 right auto-height vgroup">
						<Label id="titleLbl" class="left h4" />
						<Label id="subtitleLbl" class="margin-top-small left inactive-fg-color" />
						<Widget id="phoneAttr" src="ti.styledlabel" class="margin-top-small left h6" onClick="didClickPhone" />
						<View id="distanceView" class="margin-top-small auto-height hgroup hwrap-disabled" if="$.args.direction">
							<Label id="distanceIconLbl" class="left i5 inactive-fg-color icon-thick-location-pin" />
							<Label id="distanceLbl" class="margin-left-small" />
						</View>
						<View class="margin-top-small auto-height hgroup hwrap-disabled">
							<Label id="clockIconLbl" class="left i5 icon-clock" />
							<Label id="clockLbl" class="margin-left-small" />
						</View>
					</View>
				</View>
				<View class="margin-top margin-left margin-right auto-height" if="Alloy.Globals.isLoggedIn">
					<View class="left width-70 auto-height primary-border" onClick="didClickType">
						<Label id="favouriteLbl" class="margin-top-medium margin-bottom-medium margin-left-medium margin-right-medium h3 primary-fg-color" />
					</View>
					<Button id="homeIconBtn" class="top-disabled left-disabled right width-30 icon-home bg-color-disabled border-disabled" onClick="didClickHome" />
				</View>
				<Button id="refillBtn" class="primary-bg-color primary-light-fg-color primary-border" onClick="didClickRefill" />
				<Button id="directionBtn" class="margin-bottom bg-color primary-fg-color primary-border" onClick="didClickDirection" if="$.args.direction" />
			</View>
		</HeaderView>
		<FooterView platform="ios">
			<View class="auto-height" />
		</FooterView>
	</TableView>
	<Widget id="loader" name="embedded" src="ti.loading" />
</Alloy>