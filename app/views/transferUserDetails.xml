<Alloy>
	<ScrollView class="vgroup">
		<View class="content-header-view-wrap">
			<Label id="titleLbl" class="content-header-lbl-wrap"/>
		</View>
		<View class="margin-top form-vgroup">
			<View id="txtView" class="auto-height">
				<Widget id="fnameTxt" src="ti.textfield" class="left form-txt-50 autocaps-words returnkey-next" onReturn="moveToNext" />
				<Widget id="lnameTxt" src="ti.textfield" class="right form-txt-50 autocaps-words returnkey-next" onReturn="moveToNext" />
				<View id="vDividerView" class="v-divider"/>
			</View>
			<View class="h-divider"/>
			<Widget id="dobDp" src="ti.dropdown" class="form-dropdown date dob" onReturn="moveToNext" />
		</View>
		<Widget id="phoneTxt" src="ti.textfield" class="margin-top txt phone keyboard-phone returnkey-done" onChange="didChangePhone" onReturn="didClickSubmit" />
		<Button id="submitBtn" class="margin-top primary-btn" onClick="didClickSubmit"/>
		<!--bring the login button on edit might bring additional efforts, 
		not required as user has already chosen to enter his information-->
		<Widget id="loginAttr" src="ti.styledlabel" class="margin-top margin-bottom attributed-wrap" onClick="didClickLogin" if="!$.args.user" />
	</ScrollView>
</Alloy>
