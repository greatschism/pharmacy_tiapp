<Alloy>
	<Widget id="photoDialog" src="com.mscripts.optiondialog" class="font-regular h2" onClick="didClickOption"  />
	<View>
		<ListView id="listView" platform="ios,android">
			<Templates>
				<ItemTemplate name="prescription" class="auto-height top-10">
					<View class="bottom-10 auto-height left-15 right-15">
						<Label bindId="medicine" class="left width-65 text-left h4 black multi-line" />
						<Label bindId="lastRefill" class="right width-35 text-right h4 cloudy multi-line" />
					</View>
				</ItemTemplate>
			</Templates>
			<HeaderView>
				<View class="auto-height left-15 right-15 vgroup">
					<View class="auto-height top-20">
						<ImageView image="{doctor.thumbnail_url}" class="top left profile-img" onClick="didClickProfileImg" />
						<View class="top auto-height vgroup text-view">
							<Label class="h2 left black" text="{doctor.long_name}" />
							<View class="top-10 auto-height">
								<ImageView image="/images/call.png" class="left width-20d" />
								<Label class="left-30 right-30 malibu" text="{doctor.phone}" />
								<ImageView image="/images/edit.png" class="right width-20d" />
							</View>
							<View class="top-10 hseparator bg-gallery" />
							<View class="top-10 auto-height">
								<ImageView image="/images/fax.png" class="left width-20d" />
								<Label class="left-30 malibu" text="{doctor.fax}" />
							</View>
							<View class="top-10 hseparator bg-gallery" />
							<View class="top-10 auto-height">
								<ImageView image="/images/direction.png" class="top left width-20d" />
								<View class="top left-30 auto-height vgroup">
									<Label class="left malibu" text="{doctor.org_name}" />
									<Label class="left malibu" text="{doctor.addressline1}" />
									<Label class="left malibu" text="{doctor.city}, {doctor.state}, {doctor.zip}" />
								</View>
							</View>
						</View>
					</View>
					<Widget id="notesTxta" src="com.mscripts.textarea" class="top-20 fill-width black border-gray h4 font-regular" />
					<View class="vspacer" />
				</View>
			</HeaderView>
			<ListSection id="section" dataCollection="doctorPrescriptions">
				<HeaderView>
					<View class="height-20d bg-armadillo">
						<Label id="prescriptionsLbl" class="cloudy left-5" />
					</View>
				</HeaderView>
				<ListItem template="prescription" medicine:text="{presc_name}" lastRefill:text="{lastRefill}" />
			</ListSection>
			<FooterView>
				<View id="footerView" class="auto-height" />
			</FooterView>
		</ListView>
		<ScrollView id="listView" platform="mobileweb">
			<View class="vgroup">
				<View class="auto-height left-15 right-15 vgroup">
					<View class="auto-height top-20">
						<ImageView image="{doctor.thumbnail_url}" class="top left profile-img" onClick="didClickProfileImg" />
						<View class="top auto-height vgroup text-view">
							<Label class="h2 left black" text="{doctor.long_name}" />
							<View class="top-10 auto-height">
								<ImageView image="/images/call.png" class="left width-20d" />
								<Label class="left-30 right-30 malibu" text="{doctor.phone}" />
								<ImageView image="/images/edit.png" class="right width-20d" />
							</View>
							<View class="top-10 hseparator bg-gallery" />
							<View class="top-10 auto-height">
								<ImageView image="/images/fax.png" class="left width-20d" />
								<Label class="left-30 malibu" text="{doctor.fax}" />
							</View>
							<View class="top-10 hseparator bg-gallery" />
							<View class="top-10 auto-height">
								<ImageView image="/images/direction.png" class="top left width-20d" />
								<View class="top left-30 auto-height vgroup">
									<Label class="left malibu" text="{doctor.org_name}" />
									<Label class="left malibu" text="{doctor.street}" />
									<Label class="left malibu" text="{doctor.city}, {doctor.state}, {doctor.zip}" />
								</View>
							</View>
						</View>
					</View>
					<Widget id="notesTxta" src="com.mscripts.textarea" class="top-20 fill-width black border-gray h4 font-regular" />
					<View class="vspacer" />
				</View>
				<TableView class="auto-height" dataCollection="prescriptions">
					<HeaderView>
						<View class="height-20d bg-armadillo">
							<Label id="prescriptionsLbl" class="cloudy left-5" />
						</View>
					</HeaderView>
					<TableViewRow class="auto-height top-10">
						<View class="top auto-height bottom-10">
							<View class="top auto-height left-15 right-15">
								<Label text="{prescription_name}" class="left width-65 text-left h4 black multi-line" />
								<Label text="{lastRefill}" class="right width-35 text-right h4 cloudy multi-line" />
							</View>
						</View>
					</TableViewRow>
				</TableView>
				<View id="footerView" class="auto-height" />
			</View>
		</ScrollView>
		<Button id="hideDoctorBtn" class="bottom-20 width-90 bg-orange white h2" onClick="didClickHideDoctor" />
	</View>
</Alloy>