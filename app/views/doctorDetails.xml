<Alloy>
	<Widget id="rightNavBtn" src="ti.navbutton" class="nav-icon icon-edit" onClick="didClickRightNav" if="$.args.canUpdate" />
	<TableView id="tableView">
		<HeaderView>
			<View class="auto-height vgroup">
				<Label id="titleLbl" class="margin-top title-wrap" />
				<View class="margin-top auto-height">
					<View class="content-left-image-large-bordered" onClick="didClickPhoto">
						<Widget id="photoImg" src="ti.remoteimage" class="width-100" onError="didError" />
						<Button id="updateBtn" class="bottom quaternary-btn" />
					</View>
					<View id="contentView" class="content-view-vgroup-with-limage-large">
						<View class="icon-view" onClick="didClickPhone">
							<Label class="icon icon-phone" />
							<Label id="phoneLbl" class="icon-description-link" />
						</View>
						<View class="margin-top h-divider" />
						<View class="margin-top icon-view">
							<Label class="icon icon-print" />
							<Label id="faxLbl" class="icon-description" />
						</View>
						<View class="margin-top h-divider" />
						<View class="margin-top icon-view" onClick="didClickDirection">
							<Label class="top icon icon-direction" />
							<Label id="addressLbl" class="icon-description-link" />
						</View>
					</View>
				</View>
				<Label id="notesLbl" class="margin-bottom inactive-lbl-wrap" />
			</View>
		</HeaderView>
		<FooterView platform="ios">
			<View class="auto-height" />
		</FooterView>
	</TableView>
</Alloy>