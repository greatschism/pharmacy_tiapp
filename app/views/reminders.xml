<Alloy>
	<ScrollView>
		<View class="top auto-height vgroup">
			<View id="refillView" class="auto-height" onClick="didClickRefill">
				<ImageView id="refillImg" class="content-left-image-extra-large"/>
				<View class="content-view-with-limage-extra-large-vcentered">
					<Label id="refillLbl" class="content-title-wrap" onPostlayout="didPostlayout" />
				</View>
			</View>
			<View class="h-divider-light" />
			<View id="medView" class="auto-height">
				<ImageView id="medImg" class="content-left-image-extra-large"/>
				<View class="content-view-with-limage-extra-large-vcentered">
					<Label id="medLbl" class="content-title-wrap" />
				</View>
			</View>
			<View class="h-divider-light" />
			<View id="settingsView" class="auto-height">
				<ImageView id="settingsImg" class="content-left-image-extra-large"/>
				<View class="content-view-with-limage-extra-large-vcentered">
					<Label id="settingsLbl" class="content-title-wrap" />
				</View>
			</View>
			<View class="margin-bottom h-divider-light" />
		</View>
		<Widget id="tooltip" src="ti.tooltip" class="margin-right tooltip-unfilled-arrow-up content-primary-tooltip">
			<View class="auto-height vgroup">
				<Label id="tooltipLbl" class="lbl-wrap" />
				<Button id="tooltipHideBtn" class="margin-top margin-bottom tooltip-primary-btn" onClick="didClickHide" />
			</View>
		</Widget>
	</ScrollView>
</Alloy>