<Alloy>
	<TableView>
		<FooterView>
			<View class="vgroup auto-height">
				<View class="auto-height inactive-light-bg-color role-header-view margin-bottom">
					<Label id="userRecoveryLbl" class="margin-left margin-top margin-bottom fsm17 inactive-fg-color" />
				</View>
				<View class="margin-left margin-right auto-height vgroup border">
					<Widget id="emailTxt" src="ti.textfield" class="top left right txt border-disabled keyboard-email returnkey-done" />
				</View>
				<Button id="sendBtn" class="primary-bg-color primary-light-fg-color primary-border" onClick="didClickSend"/>
				<Button id="contactSupportBtn" class="margin-top bg-color primary-fg-color primary-border" onClick="didClickContactSupport"/>					
			</View>
		</FooterView>
	</TableView>
</Alloy>