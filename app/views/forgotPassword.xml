<Alloy>
	<TableView>
		<FooterView>
			<View class="vgroup auto-height">
				<View class="auto-height role-header-view margin-top margin-bottom">
					<Widget id="userRecoveryLbl" src="ti.styledlabel" class="margin-left margin-top margin-bottom attributed-bold" />
				</View>
				<View class="margin-left margin-right margin-bottom auto-height vgroup border">
					<Widget id="emailTxt" src="ti.textfield" class="top left right txt border-disabled keyboard-email returnkey-done" />
				</View>
				<Button id="sendBtn" class="margin-top-large primary-bg-color primary-light-fg-color primary-border" onClick="didClickSend"/>
				<Button id="helpBtn" class="margin-top bg-color primary-fg-color primary-border" onClick="didClickHelp"/>
				<Widget id="forgotUsernameAttr" src="ti.styledlabel" class="margin-top attributed-20" onClick="showForgotUsernameDialog" />					
			</View>
		</FooterView>
	</TableView>
</Alloy>