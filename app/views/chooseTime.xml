<Alloy>
	<View class="vgroup">
	<View class="auto-height vgroup">
		<Label id="whenLbl" class="padding-bottom margin-left margin-right h4 text-center multi-line fg-primary" />
	</View>
	
	<View class="default-height hgroup">
		<Label id="lblDate" class="left width-40 padding-left h2" />
		<Widget id="dateLbl" src="ti.dropdown" class="form-dropdown fill-width" />
	</View>	
	
	<View class="default-height hgroup">
		<Label id="lblTime" class="padding-left width-45 h2" />
		<Widget id="timeLbl" src="ti.dropdown" class="form-dropdown fill-width" />
	</View>	
	
	<Button id="saveBtn" class="primary-btn padding-top" onClick="didClickSave" />
	<Button id="editBtn" class="secondary-btn padding-top" onClick="didClickEditButton" />
	<Label id="deleteLbl" class="text-center multi-line padding-top" onClick="didClickDelete" />
	
	</View>	
</Alloy>
