<Alloy>
	<ListView id="listView" platform="ios,android" defaultItemTemplate="template" onItemclick="didItemClick">
		<Templates>
			<ItemTemplate name="template" class="auto-height top-10">
				<View class="left-15 right-25 auto-height bottom-10">
					<Label bindId="label" class="left width-55 text-left h4 cloudy multi-line" />
					<Label bindId="value" class="right width-45 text-right h4 cloudy multi-line" />
				</View>
				<ImageView class="child" />
			</ItemTemplate>
		</Templates>
		<HeaderView>
			<View class="height-40d bg-aeroblue">
				<Label id="whenLbl" class="button-title width-95 h4 text-center gulfstream touch-disabled" />
			</View>
		</HeaderView>
		<ListSection dataCollection="chooseTime">
			<ListItem label:text="{label}" value:text="{value}" />
		</ListSection>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="saveBtn" class="top-20 width-90 bg-orange white h2" onClick="didClickSave" />
				<Button id="editBtn" class="top-10 width-90 bg-white orange h2 font-light border-orange" onClick="didClickEdit" />
				<Button id="deleteBtn" class="top-5 width-90 bg-white orange h2 font-light malibu hide" onClick="didClickDelete" />
			</View>
		</FooterView>
	</ListView>
	<TableView id="listView" platform="mobileweb" dataCollection="chooseTime" onClick="didItemClick">
		<HeaderView>
			<View class="height-40d bg-aeroblue">
				<Label id="whenLbl" class="button-title width-90 h4 text-center gulfstream touch-disabled" />
			</View>
		</HeaderView>
		<TableViewRow class="auto-height top-10">
			<View class="top auto-height bottom-10">
				<View class="top left-15 right-25 auto-height">
					<Label text="{label}" class="left-15 width-55 text-left h4 cloudy multi-line" />
					<Label text="{value}" class="right-25 width-45 text-right h4 cloudy multi-line" />
				</View>
				<ImageView class="child" />
			</View>
		</TableViewRow>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="saveBtn" class="top-20 width-90 bg-orange white h2" onClick="didClickSave" />
				<Button id="editBtn" class="top-10 width-90 bg-white orange h2 font-light border-orange" onClick="didClickEdit" />
				<Button id="deleteBtn" class="top-5 width-90 bg-white orange h2 font-light malibu hide" onClick="didClickDelete" />
			</View>
		</FooterView>
	</TableView>
</Alloy>