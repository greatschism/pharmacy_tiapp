<Alloy>
	<TableView id="tableView" onClick="didItemClick">
		<HeaderView>
			<View class="auto-height bg-success">
				<Label id="whenLbl" class="padding-top padding-bottom margin-left margin-right auto-height h4 text-center multi-line fg-primary" />
			</View>
		</HeaderView>
		<TableViewRow>
			<View class="list-item-view-with-child">
				<Label id="dateTitleLbl" class="left width-45 h5 fg-secondary" />
				<Label id="dateLbl" class="right width-45 h5 text-right fg-secondary" />
			</View>
			<Label class="list-item-child" />
		</TableViewRow>
		<TableViewRow>
			<View class="list-item-view-with-child">
				<Label id="timeTitleLbl" class="left width-45 h5 fg-secondary" />
				<Label id="timeLbl" class="right width-45 h5 text-right fg-secondary" />
			</View>
			<Label class="list-item-child" />
		</TableViewRow>
		<FooterView>
			<View class="auto-height vgroup">
				<Button id="saveBtn" class="btn-primary" onClick="didClickSave" />
				<Button id="editBtn" class="btn-secondary" onClick="didClickEdit" />
				<Button id="deleteBtn" class="margin-bottom btn-thirtiary hide" onClick="didClickDelete" />
			</View>
		</FooterView>
	</TableView>
</Alloy>