<Alloy>
	<ScrollView class="vgroup bg-primary">
		<ImageView id="image" image="/images/logo2x.png" />
		<Label id="hintLbl" class="styled-lbl multi-line" />
		<Label id="whoLbl" class="styled-lbl multi-line" />
		<View class="form-group vgroup">
			<Widget id="fnameTxt" src="com.mscripts.textfield" class="txt text-center returnkey-done padding-top return-next" onReturn="moveToNext" />
			
			<Widget id="dob" src="com.mscripts.dropdown" class="txt text-center returnkey-done form-dropdown padding-bottom" onReturn="didClickNext" />
		</View>
		<Button id="nextBtn" class="margin-bottom secondary-btn" onClick="didClickNext" />
	</ScrollView>
</Alloy>