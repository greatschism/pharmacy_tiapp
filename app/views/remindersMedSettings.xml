<Alloy>
	<Widget id="frequencyPicker" src="ti.optionpicker" class="optionpicker radio-button" onClick="didClickFrequencyPicker">
		<View class="content-header-view role-header-view">
			<Label id="frequencyLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="frequencyCloseBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickFrequencyClose" />
		</View>
	</Widget>
	<TableView id="tableView" onClick="didClickTableView">
		<FooterView>
			<View class="auto-height vgroup">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<!--footer separator seems to disappear on iOS after a delete-->
				<View class="h-divider-light" platform="ios" />
				<Button id="submitBtn" class="margin-top margin-bottom primary-btn" onClick="didClickSubmitReminder" />
				<Button id="removeBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickRemoveReminder" if="$.args.isUpdate" />
			</View>
		</FooterView>
	</TableView>
</Alloy>