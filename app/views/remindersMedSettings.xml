<Alloy>
	<Widget id="frequencyPicker" src="ti.optionpicker" class="optionpicker" onClick="didClickFrequencyPicker">
		<View class="content-header-view role-header-view">
			<Label id="frequencyLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="frequencyCloseBtn" picker="frequencyPicker" class="margin-top margin-bottom secondary-btn" onClick="didClickClosePicker" />
		</View>
	</Widget>
	<Widget id="dailyPicker" src="ti.optionpicker" class="optionpicker" onClick="didClickDailyPicker">
		<View class="content-header-view role-header-view">
			<Label id="dailyLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="dailyCloseBtn" picker="dailyPicker" class="margin-top margin-bottom secondary-btn" onClick="didClickClosePicker" />
		</View>
	</Widget>
	<Widget id="weekdayPicker" src="ti.optionpicker" class="optionpicker">
		<View class="content-header-view role-header-view">
			<Label id="weekdayLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="weekdayCloseBtn" picker="weekdayPicker" class="margin-top margin-bottom secondary-btn" onClick="didClickClosePicker" />
		</View>
	</Widget>
	<Widget id="monthdayPicker" src="ti.optionpicker" class="optionpicker">
		<View class="content-header-view role-header-view">
			<Label id="monthdayLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="monthdayCloseBtn" picker="monthdayPicker" class="margin-top margin-bottom secondary-btn" onClick="didClickClosePicker" />
		</View>
	</Widget>
	<Widget id="periodPicker" src="ti.optionpicker" class="optionpicker" onClick="didClickPeriodPicker">
		<View class="content-header-view role-header-view">
			<Label id="periodLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height role-footer-view">
			<Button id="periodCloseBtn" picker="periodPicker" class="margin-top margin-bottom secondary-btn" onClick="didClickClosePicker" />
		</View>
	</Widget>
	<TableView id="tableView" onClick="didClickTableView">
		<FooterView>
			<View class="auto-height vgroup">
				<!--footer separator seems to appear on pre lollipop devices-->
				<View class="h-divider-light" if="Alloy.Globals.isLollipop" />
				<!--footer separator seems to disappear on iOS after a delete-->
				<View class="h-divider-light" platform="ios" />
				<Button id="submitBtn" class="margin-top margin-bottom primary-btn" onClick="didClickSubmitReminder" />
				<Button id="removeBtn" class="margin-top margin-bottom secondary-btn" onClick="didClickRemoveReminder" if="$.args.isUpdate" />
			</View>
		</FooterView>
	</TableView>
</Alloy>