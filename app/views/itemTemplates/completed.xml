<Alloy autoStyle="true">
	<TableViewRow id="row">
		<View id="contentView" class="margin-top margin-bottom margin-left margin-right auto-height">
			<View class="auto-height vgroup">
				<Label id="titleLbl" class="left h4" />
				<Label id="subtitleLbl" class="left inactive-fg-color"/>
				<View id="masterView" class="margin-top-small auto-height">
					<Label id="subtitleIconLbl" class="left i6" />
					<Label id="detailLbl" class="margin-left-small inactive-fg-color bubble-disabled" onClick="didClickPhone" />
				</View>
				<Label id="changeTimeLbl"  class="left custom-fg-color bubble-disabled margin-top-small" onClick="didClickPromiseTime" if = "Alloy.CFG.is_update_promise_time_enabled && $.args.changeTimeLbl" />
			</View>
			<Label id="childLbl" class="margin-right-small i6 inactive-fg-color icon-thin-arrow-right touch-disabled hide" />
			<View id="deliveryView" class="right auto-width auto-height vgroup bubble-disabled" >
				<ImageView id="deliveryImg" class="right img-shipping-truck border-disabled" onClick="didClickDeliver" />
				<Label id="deliveryLbl" text="" class="right bg-color primary-fg-color h6" />
			</View> 
		</View>
	</TableViewRow>
</Alloy>
