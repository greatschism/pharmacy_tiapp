<Alloy>
	<ScrollView class="vgroup">
		<Widget id="instructionExp" src="ti.expandable">
			<View class="auto-height role-master-view" onClick="toggleInstruction">
				<View id="instructionContentView" class="content-view-with-child">
					<Label id="instructionLbl" class="content-lbl" />
				</View>
				<Label id="arrowLbl" class="content-down-icon" />
			</View>
			<Widget id="instructionAsyncView" src="ti.asyncview" class="content-view role-detail-view">
				<Label id="prescInstructionLbl" class="lbl-wrap" />
			</Widget>
		</Widget>
		<View class="h-divider" />
		<Button id="hideBtn" class="margin-top margin-bottom secondary-btn" if="$.args.canHide" onClick="didClickHide" />
	</ScrollView>
</Alloy>
