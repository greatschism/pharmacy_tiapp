<Alloy>
	<ScrollView class="vgroup">
		<Widget id="prescExp" src="ti.expandable">
			<View class="auto-height role-master-view" onClick="togglePrescription">
				<View id="prescContentView" class="content-view-vgroup-with-rbtn">
					<Label id="titleLbl" class="content-title-wrap" />
				</View>
				<Button id="toggleBtn" class="content-tertiary-right-btn" />
			</View>
			<Widget id="prescAsyncView" src="ti.asyncview" class="vgroup async-view role-detail-view">
				<View id="prescAsyncContentView" class="content-view-vgroup-with-padding">
					<View class="content-group">
						<Label id="rxPromptLbl" class="content-group-inactive-prompt" />
						<Label id="rxReplyLbl" class="content-group-reply" />
					</View>
					<View class="margin-top content-group">
						<Label id="expiryPromptLbl" class="content-group-inactive-prompt" />
						<Label id="expiryReplyLbl" class="content-group-reply" />
					</View>
					<View class="margin-top content-group" onClick="didClickDoctor">
						<Label id="doctorPromptLbl" class="content-group-inactive-prompt" />
						<Label id="doctorReplyLbl" class="content-group-reply-link" />
					</View>
					<View class="margin-top content-group" onClick="didClickStore">
						<Label id="storePromptLbl" class="content-group-inactive-prompt" />
						<Label id="storeReplyLbl" class="content-group-reply-link" />
					</View>
				</View>
				<View class="margin-bottom h-divider-light" />
			</Widget>
		</Widget>
		<View class="auto-height margin-left margin-right hgroup-no-wrap">
			<View class="info-view-30">
				<Label id="refillsLeftLbl" class="info-view-title" />
				<Button id="refillsLeftBtn" />
			</View>
			<View class="info-view-35">
				<Label id="dueLbl" class="info-view-title" />
				<Button id="dueBtn" class="info-btn" />
			</View>
			<View class="info-view-35" onClick="showHistory">
				<Label id="lastRefillLbl" class="info-view-title" />
				<Button id="lastRefillBtn" class="info-btn" />
			</View>
		</View>
		<Button id="refillBtn" class="margin-top primary-btn" if="$.args.canHide" onClick="didClickRefill" />
		<View class="margin-top content-header-view">
			<Label id="remindersLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height">
			<View class="content-view-with-rswt">
				<Widget id="reminderRefillAttr" src="ti.styledlabel" class="content-lbl-attributed-wrap" />
			</View>
			<Widget id="reminderRefillSwt" src="ti.switch" class="content-right-swt swt" onChange="didChangeRefill" />
		</View>
		<View class="h-divider-light" />
		<View class="auto-height">
			<View class="content-view-with-rswt">
				<Widget id="reminderMedAttr" src="ti.styledlabel" class="content-lbl-attributed-wrap" onChange="didChangeMed" />
			</View>
			<Widget id="reminderMedSwt" src="ti.switch" class="content-right-swt swt" />
		</View>
		<View class="content-header-view">
			<Label id="informationLbl" class="content-header-lbl" />
		</View>
		<View class="auto-height" onClick="showHistory">
			<View class="content-view-with-child">
				<Label id="historyLbl" class="content-lbl" />
			</View>
			<Label class="content-child-icon icon-thin-arrow-right" />
		</View>
		<View class="h-divider-light" />
		<Widget id="instructionExp" src="ti.expandable">
			<View class="auto-height role-master-view" onClick="toggleInstruction">
				<View id="instructionContentView" class="content-view-with-child">
					<Label id="instructionLbl" class="content-lbl" />
				</View>
				<Label id="arrowLbl" class="content-child-icon icon-thin-arrow-down" />
			</View>
			<Widget id="instructionAsyncView" src="ti.asyncview" class="content-view async-view role-detail-view">
				<Label id="prescInstructionLbl" class="lbl-wrap" />
			</Widget>
		</Widget>
		<View class="h-divider-light" />
		<Button id="hideBtn" class="margin-top margin-bottom secondary-btn" if="$.args.canHide" onClick="didClickHide" />
	</ScrollView>
	<Widget id="loader" name="embedded" src="ti.loading" class="loader-embedded-fill" />
</Alloy>
