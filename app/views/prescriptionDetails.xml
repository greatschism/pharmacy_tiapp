<Alloy>
	<TableView>
		<TableViewSection>
			<HeaderView>
				<View class="section-header-view">
					<Label id="detailsLbl" class="section-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="list-item-view vgroup">
					<Label id="prescriptionNameLbl" class="left title-lbl" />
					<View class="padding-top auto-height">
						<View class="left width-30 auto-height vgroup">
							<Label id="refillsLeftLbl" class="info-lbl" />
							<View class="padding-top auto-width info-view">
								<Label id="refillLeftInfoLbl" class="info-lbl" />
							</View>
						</View>
						<View class="width-30 auto-height vgroup">
							<Label id="dueForRefillLbl" class="info-lbl" />
							<View class="padding-top auto-width info-view">
								<Label id="dueForRefillInfoLbl" class="info-lbl" />
							</View>
						</View>
						<View class="right width-30 auto-height vgroup">
							<Label id="lastRefillLbl" class="info-lbl" />
							<View class="padding-top auto-width info-view">
								<Label id="lastRefillInfoLbl" class="info-lbl" />
							</View>
						</View>
					</View>
					<View class="padding-top auto-height">
						<Label id="autoRefillLbl" class="left list-item-lbl" />
						<Widget id="autoRefillSwt" src="com.mscripts.switch" class="right swt" />
					</View>
					<Button id="refillBtn" class="padding-top primary-btn" onClick="didClickRefillPrescription"/>
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="section-header-view">
					<Label id="remindersLbl" class="section-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="list-item-view">
					<Widget id="remindMeToRefillLbl" src="com.mscripts.styledlabel" class="left auto-height list-item-lbl" />
					<Widget id="remindMeToRefillSwt" src="com.mscripts.switch" class="right swt" />
				</View>
			</TableViewRow>
			<TableViewRow>
				<View class="list-item-view">
					<Widget id="setTimeLbl" src="com.mscripts.styledlabel" class="left auto-height list-item-lbl" />
					<Widget id="setTimeSwt" src="com.mscripts.switch" class="right swt" />
				</View>
			</TableViewRow>
		</TableViewSection>
		<TableViewSection>
			<HeaderView>
				<View class="section-header-view">
					<Label id="informationLbl" class="section-header-lbl" />
				</View>
			</HeaderView>
			<TableViewRow>
				<View class="list-item-view-with-child">
					<Label id="refillHistoryLbl" class="left list-item-lbl" onClick="didClickRefillHistory"/>
				</View>
				<Label class="list-item-child" onClick="didClickRefillHistory"/>
			</TableViewRow>
			<TableViewRow>
				<View class="list-item-view-with-child">
					<Label id="dosageInstructionLbl" class="left list-item-lbl" />
				</View>
				<Label class="list-item-child-down" />
			</TableViewRow>
			<TableViewRow id ="dummy">
				<View id="moreHelpView" class="list-item-view ">
					<Label id="moreHelpLbl" class="left list-item-lbl"/>
				</View>
			</TableViewRow>
			<TableViewRow>
				<View id="configItemView" class="list-item-view-with-child ">
					<Label id="configReadLbl" class="left list-item-lbl"/>
				</View>
				<Label id="readLbl" class="margin-right"/>
				<Label class="list-item-child" />
			</TableViewRow>
			<TableViewRow>
				<View id="adherenceView" class="left vgroup list-item-view-with-child ">
					<Label id="iconLbl" height="70" width="70" class="left"/>
				</View>
				<Label id="configAdherLbl" class="multi-line"/>
				<Label class="list-item-child" />
			</TableViewRow>
		</TableViewSection>
		<FooterView>
			<View class="auto">
				<Button id="hideBtn" class="padding-top padding-bottom secondary-btn" />
			</View>
		</FooterView>
	</TableView>
</Alloy>