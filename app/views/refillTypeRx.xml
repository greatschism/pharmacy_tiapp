<Alloy>
	<ScrollView class="vgroup">
		<View class="auto-height">
			<Widget id="hintLbl1" src="com.mscripts.styledlabel" class="padding-top padding-bottom margin-left margin-right auto-height text-center multi-line primary-color" />
		</View>
		<View class="form-group vgroup">
			<Label id="hintLbl2" />
			<View class="default-height" onClick="choosePharmacy">
				<Label id="locationLbl" class="padding-left  fg-quaternary touch-disabled" />
				<Label id="downLbl" class="padding-right small-icon touch-disabled" />
			</View>
		</View>
		<View class="form-group vgroup">
			<Label id="hintLbl3" />
			<Widget id="mobileNumber" src="com.mscripts.textfield" class="form-txt return-next" />
		</View>
		<Button id="orderRefillBtn" class="margin-bottom secondary-btn" onClick="didClickOrderRefill" />
	</ScrollView>
</Alloy>