<Alloy>
	<ScrollView class="vgroup">
		<Label id="userLbl" class="margin-top paragraph-lbl"/>
		<Label id="instructionLbl" class="padding-top paragraph-lbl" />
		<Widget id="passwordTxt" src="com.mscripts.textfield" class="padding-top txt returnkey-done" onReturn="didClickDone" />
		<View class="padding-top margin-left margin-right auto-height">
			<Label id="keepMeLbl" class="left text-left lbl" />
			<Widget id="keepMeSwt" src="com.mscripts.switch" class="right swt" onTouch="handleScroll"  />
		</View>
		<Button id="doneBtn" class="btn-padding-top margin-bottom primary-btn" onClick="didClickDone"/>
	</ScrollView>
</Alloy>