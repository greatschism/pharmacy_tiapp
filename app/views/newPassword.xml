<Alloy>
	<ScrollView id="scrollView" class="vgroup">
		<Label id="userLbl" class="margin-top paragraph-lbl"/>
		<Label id="instructionLbl" class="padding-top paragraph-lbl" />
		<Widget id="passwordTxt" src="ti.textfield" class="padding-top txt returnkey-done" onReturn="didClickDone" />
		<View class="padding-top margin-left margin-right auto-height">
			<Label id="showPasswordLbl" class="left text-left lbl" />
			<Widget id="toggleSwt" src="ti.switch" class="right swt" onTouch="handleScroll" onChange="didToggle"  />
		</View>
		<Button id="doneBtn" class="btn-padding-top margin-bottom primary-btn" onClick="didClickDone"/>
	</ScrollView>
</Alloy>