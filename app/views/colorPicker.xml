<Alloy>
	<ScrollView id="scrollView" class="vgroup">
		<Label id="hintLbl" class="margin-top margin-bottom margin-left margin-right" />
		<View class="h-divider-light" />
		<Widget id="picker" src="nl.fokkezb.color" onChange="didChange" class="top height-60" />
		<View class="h-divider-light" />
		<View class="auto-height">
			<Label id="colorLbl" class="margin-top margin-bottom margin-left" />
			<View id="colorBoxView" class="margin-right color-box border" />
		</View>
		<View class="h-divider-light" />
		<Button id="submitBtn" class="margin-bottom primary-bg-color primary-font-color primary-border" onClick="didClickSubmit" />
	</ScrollView>
</Alloy>