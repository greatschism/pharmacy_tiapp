<Alloy>
	<ScrollView id="scrollView" class="vgroup">
		<View class="auto-height">
			<View class="auto-height vgroup">
				<Label id="iconLbl" class="margin-top extra-large-icon primary-color" />
				<Label id="titleLbl" class="padding-top margin-left margin-right text-left title-lbl" />
				<Label id="doneLbl" class="padding-top paragraph-lbl" />
				<View class="padding-top form-group vgroup">
					<Widget id="emailTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onReturn="moveToNext" />
					<View class="hseparator" />
					<Widget id="dob" src="com.mscripts.dropdown" class="form-dropdown " onReturn="moveToNext" />
				</View>
				<View id="containerView" class="padding-top form-group vgroup">
					<Widget id="unameTxt" src="com.mscripts.textfield" class="form-txt returnkey-next" onFocus="didFocusUsername" onBlur="didBlurUsername" onReturn="moveToNext" />
					<View class="hseparator" />
					<Widget id="passwordTxt" src="com.mscripts.textfield" class="form-txt returnkey-done" onFocus="didFocusPassword" onBlur="didBlurPassword" onReturn="didClickSignup" />
				</View>
				<View class="padding-top padding-bottom margin-left margin-right auto-height">
					<Label id="showPasswordLbl" class="left lbl" />
					<Widget id="toggleSwt" src="com.mscripts.switch" class="right swt" onTouch="handleScroll" onChange="didToggle"  />
				</View>
				<Widget id="agreementLbl" src="com.mscripts.styledlabel" class="margin-left margin-right link-multi-line" onClick="didClickAgreement" />
				<Button id="signupBtn" class="btn-padding-top margin-bottom primary-btn" onClick="didClickSignup" />
			</View>
			<Widget id="usernameTooltip" src="com.mscripts.tooltip" class="padding-tooltip arrow-down tooltip" onClick="didClickTooltip" />
			<Widget id="passwordTooltip" src="com.mscripts.tooltip" class="padding-tooltip arrow-down tooltip" onClick="didClickTooltip" />
		</View>
	</ScrollView>
</Alloy>